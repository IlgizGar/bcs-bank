.question-popup
  opensansRegular()
  line-height: 1.5
  background-color $white
  color: $cyprus
  border-radius: 4px
  box-shadow: 0 10px 20px 0 rgba(0, 0, 0, 0.2), 0 0 50px 0 rgba(255, 255, 255, 0.5)
  max-width: 265px
  min-height: 128px
  padding: 24px
  margin-top: 30px
  z-index 999
  .question-popup__text
    margin-bottom: 12px
  .button
    height: auto
    .button__wrap
      padding-right: 12px
      padding-left: 12px
    &:first-child
      margin-left: -12px
