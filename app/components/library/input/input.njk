{% import "../../../components/icon/icon.njk" as Icon %}

{% macro input( options ) %}
  <div class="input js-input state_init {{ options.class }}">
    <label class="input__group">
      <span class="input__label js-label">{{ options.label }}</span>
      {% if options.tag === "textarea" %}
        <textarea class="input__field" rows="{{ options.rows }}" type="{{ options.type }}" name="{{ options.name }} value={{ options.value }}"></textarea>
      {% else %}
        <input class="input__field {{ options.field }}" type="{{ options.type }}" name="{{ options.name }}" value="{{ options.value }}" {% if options.disabled %}disabled{% endif %}>
      {% endif %}
    </label>
    {% if options.name %}
      {{ Icon.icon({ 'name': options.name }) }}
    {% endif %}
    {% if options.title %}
      <span class="input__title js-title">{{ options.title }}</span>
    {% endif %}
  </div>
{% endmacro %}
