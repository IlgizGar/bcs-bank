.input
  .input__slider

    position: absolute
    left: 0
    bottom: -14px

    width: 100%
    height: 24px

    .irs

      height: 100%

      .irs-slider
        cursor: pointer

        top: -9px

        width: 20px
        height: 20px

        border-radius: 50%
        background-color: $color_light
        box-shadow: 0 2px 6px 0 rgba(0, 25, 52, 0.1);

        &:after
          content: ''

          position: absolute
          top: calc(50% - 3px)
          left: calc(50% - 3px)

          width: 6px
          height: 6px

          border-radius: 50%
          background-color: $color_default

      .irs-single
        display: none

      .irs-line
        margin-top: 10px

        height: 2px

        .irs-line-left
          width: 20px
          height: 2px

          border-radius: 50%
          background-color: $color_default

      .irs-bar
        top: 0

        height: 2px

        background-color: $color_default

      .irs-max, .irs-min
        bottom: 0

        opensansRegular(12px)
        color: $color_link