.input
  position: relative
  display: flex
  justify-content: space-between
  align-items: center
  width: 100%
  padding: 0
  border-radius: 4px
  border: solid 1px $color_borders
  transition: all $interval

  &:not(.input_textarea)
    height: 65px
    @media (max-width: 1279px)
      height: 55px

  &:hover
    border-color: $color_borders_light

  &.state_init
    .input__label
      transform: translateY(50%)
      font-size: 16px
      width: 100%

      @media (max-width: 1279px)
        font-size: 14px

  &.state_error
    border-color: red

  .icon
    width: 14px
    height: 14px
    margin-right: 24px
    color: $color_inactive

    transform: translateY(-1px)
