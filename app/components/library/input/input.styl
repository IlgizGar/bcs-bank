.input
  position: relative
  display: flex
  justify-content: space-between
  align-items: center
  width: 100%
  padding: 0
  border-radius: 4px
  border: solid 1px #D8D8D8
  transition: all $interval

  &:not(.input_textarea)
    height: 54px /*65px*/
    @media (max-width: 1279px)
      height: 55px

  &:hover
    border-color: #78818F

  &.state_focus:not(.state_error)
    border-color #4573D9
    box-shadow inset 0 0 0 1px #4573D9

  &.state_init
    .input__label
      transform: translateY(50%)
      font-size: 16px
      width: 100%

      @media (max-width: 1279px)
        font-size: 14px

  &.state_error
    border-color: red
  &.state_readonly
    background-color #EFEFF0
    border-color #EFEFF0
    .input__field
      color #78818F

  .icon
    width: 20px
    height: 19px
    margin-right: 20px
    color: $color_inactive

    transform: translateY(-1px)
