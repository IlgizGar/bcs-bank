.contact .contact__item
  margin-top: 34px

  transition: all $interval

  p:first-child, a:first-child
    formular(24px)
    color: $color_elem

  p:last-child
    margin-top: 10px
    opensansRegular(12px)
    color: $color_link

  a:hover
    color: $color_hover
  @media (max-width: 1279px)
    margin-top: 0
    margin-bottom: 16px
    p:first-child, a:first-child
      font-size: 16px
    p:last-child
      margin-top: 4px
    &:last-child
      margin-bottom: 32px
