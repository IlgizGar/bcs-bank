.contact .contact__item
  margin-top: 34px

  transition: all $interval

  p:first-child, a:first-child
    color: $color_elem


    @media (max-width: 1279px)
      formularBold(16px)
    @media (max-width: 831px)
      formularBold(24px)

  p:last-child
    margin-top: 10px
    opensansRegular(14px)
    color: $color_link

  a:hover
    color: $color_hover
  @media (max-width: 1279px)
    margin-top: 0
    margin-bottom: 24px
    p:first-child, a:first-child
      font-size: 16px
      color: $royal_blue
    p:last-child
      margin-top: 10px
    &:last-child
      margin-bottom: 32px
