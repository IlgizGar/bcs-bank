{% macro contact( options ) %}
    <div class="contact {{ options.class }}">
        <div class="contact__title">{{ options.title }}</div>
        {% for item in options.items %}
            <div class="contact__item">
                {% if item.href %}
                    <a href={{ item.href }}>{{ item.value }}</a>
                {% else %}
                    <p>{{ item.value }}</p>
                {% endif %}
                {% if item.name %}
                  <p>{{ item.name }}</p>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endmacro %}
