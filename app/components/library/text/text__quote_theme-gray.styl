.text .text__quote.text__quote_theme-gray
  border-radius: 4px
  background-image: url(../images/section-grey.png)
  background-size: cover
  padding: 80px calc(16.666666666666668% + 20px)
  display: flex
  flex-direction: column

  @media (min-width: 768px) and (max-width: 991px)
    padding-top: 40px
    padding-bottom: 40px
    padding-left: calc(12.666666666666668% + 20px)
    padding-right: 32px

  @media (min-width: 480px) and (max-width: 767px)
    padding-top: 30px
    padding-bottom: 30px
    padding-left: calc(8.666666666666668% + 20px)
    padding-right: 20px

  @media (max-width: 479px)
    padding-top: 30px
    padding-bottom: 30px
    padding-left: 48px
    padding-right: 16px
