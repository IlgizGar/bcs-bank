.text
  .text__quote
    .text__quote-content
      opensansBold()
      position: relative
      &:before
        content: ''
        display: block
        height: 24px
        width: 24px
        position: absolute
        left: -44px
        right: 0
        background-image: url("../images/svg/quote.svg")
        background-repeat: no-repeat
        background-position: center center
        @media (max-width: 1279px)
          left: -33px
    &.text__quote_theme-blue
      .text__quote-content
        max-width: 750px
        line-height: 1.5
        color: $white
        &:before
          background-image: url("../images/svg/quote-light.svg")

