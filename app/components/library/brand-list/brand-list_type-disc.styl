.brand-list.brand-list_type-disc
  & > li
    opensansRegular()
    position: relative
    padding-left: 55px
    &:not(:last-child)
      padding-bottom: 14px
    &:before
      content: ''
      position: absolute
      left: 4px
      top: 4px
      display: inline-block
      width: 16px
      height: 16px
      //border-radius: 50%
      //background-color: $cyprus
      //border: 1px solid $cyprus
      background-image: url('../images/svg/black-bullit.svg')
      background-size: cover
      background-position: center
      background-repeat: no-repeat

    & > ul
      padding-top: 14px
      padding-bottom: 4px
    & > .brand-list_type-disc
      padding-left: 10px



