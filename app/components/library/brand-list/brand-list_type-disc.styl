.brand-list.brand-list_type-disc
  & > li
    opensansRegular()
    position: relative
    padding-left: 55px
    &:not(:last-child)
      padding-bottom: 14px
    &:before
      content: ''
      position: absolute
      left: 4px
      top: 9px
      display: inline-block
      width: 4px
      height: 4px
      border-radius: 50%
      background-color: $cyprus
      border: 1px solid $cyprus
    & > ul
      padding-top: 14px
      padding-bottom: 4px
    & > .brand-list_type-disc
      padding-left: 10px



