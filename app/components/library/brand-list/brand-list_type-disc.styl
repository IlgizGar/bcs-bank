.brand-list.brand-list_type-disc
  & > li
    opensansRegular()
    line-height: 1.5
    position: relative
    padding-left: 55px
    @media (max-width 1279px)
      padding-left: 28px
    &:not(:last-child)
      padding-bottom: 12px
      @media (max-width 1279px)
        padding-bottom: 8px
    &:before
      content: ''
      position: absolute
      display: inline-block
      top: 10px;
      left: 1px
      width: 13px;
      height: 13px;
      //border-radius: 50%
      //background-color: $cyprus
      //border: 1px solid $cyprus
      background-image: url('../images/svg/black-bullit.svg')
      background-size: cover
      background-position: center
      background-repeat: no-repeat
      @media (max-width 1279px)
        left: -3px
        top: 4px
        width: 16px
        height: 16px
    & > ul
      padding-top: 14px
      padding-bottom: 4px
    & > .brand-list_type-disc
      padding-left: 10px

      left: 1px