.feature
  .feature__title
    display: block

  &.feature_type-normal
    .feature__title
      margin-bottom: 20px

      formular(24px)
      line-height: 0.9

      @media (max-width: 767px)
        margin-bottom: 4px
        font-size: 16px

  &.feature_type-iconed
    .feature__title
      formularBold()
      margin-bottom: 20px

      color: $color_elem
      line-height: 0.9

      @media (max-width: 767px)
        margin-bottom: 16px
