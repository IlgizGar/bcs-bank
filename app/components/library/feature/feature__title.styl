.feature
  .feature__title
    display: block

  &.feature_type-normal
    .feature__title
      margin-bottom: 16px
      formular(24px)

      @media (max-width: 767px)
        margin-bottom: 4px
        font-size: 16px

  &.feature_type-iconed
    .feature__title
      formularBold()
      margin-bottom: 16px
      color: $color_elem

      @media (max-width: 767px)
        margin-bottom: 16px
