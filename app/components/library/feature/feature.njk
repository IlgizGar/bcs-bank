{% import "../../../components/icon/icon.njk" as Icon %}

{% macro feature( options ) %}
  {% set class_sep = joiner(' ') %}
  {% if options.mods %}
    {% set mods = '' %}
    {% set mods %}
      {% for key, value in options.mods -%}
        {{ class_sep() }} feature_{{ key }}-{{ value }}
      {%- endfor %}
    {% endset %}
  {% endif %}

  <div class="feature {{ mods | safe }} {{ options.class }}">
    {% if options.iconPath %}
      <div class="feature__icon">
        <img src="{{ options.iconPath }}">
      </div>
    {% endif %}
    <div class="feature__content">
      <span class="feature__title">{{ options.title | striptags(true) | escape | nl2br | replace("#ruble", Icon.icon({ 'name': 'ruble' })) | safe }}</span>
      <span class="feature__text">{{ options.text | striptags(true) | escape | nl2br | replace("#ruble", Icon.icon({ 'name': 'ruble' })) | safe }}</span>
    </div>
  </div>
{% endmacro %}

