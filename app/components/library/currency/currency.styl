.currency
  display: inline-flex
  align-items: center

  span
    opensansRegular()
    color: $color_elem

    &:nth-child(2)
      opacity: 0.8
      color: $color_link

  .icon
    margin-left: 8px
    width: 8px
    height: 8px

   &.state_rise
     color: $color_active

     .icon
       transform: scale(1, -1)

  &.state_fall
    color: $color_alert
  &.state_hidden_arrow
    .icon
      opacity 0
