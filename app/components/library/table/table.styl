.table
  &:not(.table_sortable)
    width: 100%
    thead
      tr
        th
          width: calc(50% - 20px)
          padding-bottom: 25px

          opensansRegular(12px)
          text-align: right
          color: $color_link
          font-weight: 300

        th:first-child
          width: 40px
    tbody
      tr
        td
          width: calc(50% - 20px)
          height: 54px

          text-align: right

        td:first-child
          width: 40px

          opensansBold()
          color: $color_elem
  @media (max-width 1279px)
    width: 100%
    overflow-x auto
