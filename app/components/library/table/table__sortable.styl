.table.table_sortable
  opensansRegular()
  padding-top: 9px
  margin-right: -23px
  margin-left: -23px
  margin-bottom: 80px

  overflow: auto

  &::-webkit-scrollbar
    width: 0
    height: 0

  &
    -ms-overflow-style: none

  &
    overflow: -moz-scrollbars-none

  @media (max-width: 991px)
    margin: 0 -20px !important
    padding: 0 20px
    width: calc(100% + 40px)

    font-size: 12px

  .table__content
    @media (max-width: 1279px)
      min-width: 768px;
