.table_sortable thead.table__head
  min-width: 100%
  font-size: 12px
  th
    outline: none
    text-align: center
    &:first-child
      text-align: left
      padding-left: 23px
    &:last-child
      text-align: right
      padding-right: 23px
    &[data-sort]
      position: relative
      cursor: pointer
      svg
        opacity: 0
        position: absolute
        top: 8px;
        left: calc(100% + 11px);
        fill: $slate_grey
        transition: all 0.175s linear
      &:hover
        .table__column-title
          color: $royal_blue
        svg
          opacity: 1
          path
            fill: $royal_blue

      &.tablesorter-headerAsc,
      &.tablesorter-headerDesc
        svg
          opacity: 1

      &.tablesorter-headerDesc
        svg
          transform: scaleY(-1)


