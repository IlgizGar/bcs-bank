.table.table_sortable.table_theme-default
  margin: 0
  thead
    th, th:last-child
      //width: calc(100% / 4)
      flex: 1
      padding-left: 0

      text-align: left
  tbody
    tr
      vertical-align: top

      border-top: solid 1px $gainsboro

      td:first-child
        padding-left: 0
        padding-right: 17px

      td, td:last-child
        @media (min-width: 992px)
          padding: 32px 30px 32px 0

          .icon
            width: 10px;
            height: 13px;

        @media (max-width: 991px)
          padding: 16px 30px 16px 0

          .icon
            width: 7px;
            height: 10px;

        text-align: left
        &:before
          display: none


      &:hover
        td
          cursor: default
          background-color: transparent
    &:last-child
      border-bottom: solid 1px $gainsboro
      td
        padding-bottom: 32px
        &:after
          display: none
