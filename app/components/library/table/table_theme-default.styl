.table.table_sortable.table_theme-default
  margin: 0
  thead
    th, th:last-child
      width: calc(100% / 4)
      padding-left: 0

      text-align: left
  tbody
    tr
      vertical-align: top

      border-top: solid 1px $gainsboro

      td:first-child
        padding-left: 0
        padding-right: 17px

      td, td:last-child
        padding: 32px 30px 32px 0

        text-align: left
        &:before
          display: none

        .icon
          width: 10px;
          height: 13px;
      &:hover
        td
          cursor: default
          background-color: transparent
    &:last-child
      border-bottom: solid 1px $gainsboro
      td
        padding-bottom: 32px
        &:after
          display: none
