{% import "../button/button.njk" as Button %}

{% macro socials( options ) %}
  <div class="socials {{ options.class }}">
    {% if options.title %}
      <div class="socials__title">{{ options.title }}</div>
    {% endif %}
    {% if options.device %}
      {{ Button.button({ 'href': '#', 'name': 'market', 'mods': options.mods, 'class': 'socials__item' }) }}
      {{ Button.button({ 'href': '#', 'name': 'apple', 'mods': options.mods, 'class': 'socials__item' }) }}
    {% else %}
      {{ Button.button({ 'href': 'http://facebook.com/БКС-Банк-158897491435713', 'name': 'facebook', 'mods': options.mods, 'class': 'socials__item' }) }}
      {{ Button.button({ 'href': 'http://vk.com/bcsbank', 'name': 'vkontakte', 'mods': options.mods, 'class': 'socials__item' }) }}
    {% endif %}
  </div>
{% endmacro %}
