{% import "../button/button.njk" as Button %}

{% macro socials( options ) %}
  <div class="socials {{ options.class }}">
    {{ Button.button({ 'href': '#', 'name': 'facebook', 'mods': options.mods, 'class': 'socials__item' }) }}
    {{ Button.button({ 'href': '#', 'name': 'vkontakte', 'mods': options.mods, 'class': 'socials__item' }) }}
    {{ Button.button({ 'href': '#', 'name': 'twitter', 'mods': options.mods, 'class': 'socials__item' }) }}
  </div>
{% endmacro %}
