{% import "../../../components/icon/icon.njk" as Icon %}

{% macro addressUnderground( options ) %}

<div class="collapse__control">
  <div class="collapse__control-underground">
    <div class="collapse__control-underground-icon  {% if options.type %}{{ "underground-line-" + options.type }}{% endif %}">
      {{ Icon.icon({ 'name': 'orange' }) }}
    </div>
    <div class="collapse__control-underground-name"> Проспект Мира </div>
    <div class="collapse__control-distance"> 210м </div>
  </div>
  <div class="collapse__control-title">
    ул. Валовая, 2-4/44
  </div>
  <div class="collapse__control-description">
    {% if options.atm === 'time' %}
      <div class="collapse__control-description-timetable">
        Пн-Пт, 6:00–23:00
      </div>
      <div class="collapse__control-description-timetable">
        Сб-Вс — выходной
      </div>
      {% elif options.atm === 'always' %}
      Круглосуточно
    {% else %}
      Кредитно-кассовый офис
    {% endif %}
  </div>
  <div class="collapse__control-icon">
    {{ Icon.icon({ 'name': 'dropdown' }) }}
  </div>
</div>
{% endmacro %}
