
{% macro UsefullPaySteps( options ) %}

    {% set class_sep = joiner(' ') %}

    {% if options.data %}
        {% set options = options.data %}
        {% set paragraphs = options.text %}
    {% endif %}

    {% if options.mods %}
        {% set mods = '' %}
        {% set mods %}
            {% for key, value in options.mods -%}
                {{ class_sep() }} usefull-pay-step_{{ key }}-{{ value }}
            {%- endfor %}
        {% endset %}
    {% endif %}
    <div class="carousel carousel_type-mobile">
        <ol class="usefull-pay-steps js-carousel carousel__content {{ mods | safe }} {{ options.class }} " data-id="{{ options.sliderId }}" data-breakpoint="991">
            {% for item in options.steps  %}
                <li class="usefull-pay-steps__item">
                    {% if item.text %}
                        <span class="usefull-pay-steps__item-text">
                        {{ item.text }}
                    </span>
                    {% endif %}
                    {% if item.img %}
                        <span class="usefull-pay-steps__item-img">
                        <img src="{{ item.img }}">
                    </span>
                    {% endif %}
                </li>
            {% endfor %}
        </ol>
        <div class="carousel-controls carousel-controls_theme-dark js-carousel-controls hide_desktop mb-64">
            <div class="carousel-controls__pagination js-carousel-pagination" data-carousel="{{ options.sliderId }}">
                <span>01</span><span></span><span></span>
            </div>
        </div>
    </div>
{% endmacro %}
