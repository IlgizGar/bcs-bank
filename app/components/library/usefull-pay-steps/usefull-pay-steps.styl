.usefull-pay-steps
  background transparent
  padding 0
  margin 0
  list-style none
  display block!important
  counter-reset: list
  width 100%
  &__item
    counter-increment: list
    display flex
    flex-direction row
    align-items center
    justify-content space-between
    margin-bottom 80px
    width 100%
    @media (max-width 991px)
      flex-direction column
      margin-bottom 0
      display inline-flex!important
    span
      display inline-block
    &-text
      opensansRegular(24px)
      font-weight: normal
      font-style: normal
      font-stretch: normal
      line-height: 1.33
      letter-spacing: normal
      max-width 475px
      @media (max-width 991px)
        margin-bottom 30px
        order 2
      &:before
        content: counter(list)
        formular(32px)
        display block
        font-weight: bold
        font-style: normal
        font-stretch: normal
        line-height: normal
        letter-spacing: normal
        margin-bottom 15px
        @media (max-width 991px)
          content none
    &-img
      width 100%
      height auto
      max-width 270px
      position relative
      img
        width 100%
      @media (max-width 991px)
        order 1
