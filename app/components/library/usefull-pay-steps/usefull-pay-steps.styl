.usefull-pay-steps
  background transparent
  padding 0
  margin 0
  list-style none
  counter-reset: list;
  &__item
    counter-increment: list
    display flex
    flex-direction row
    align-items center
    justify-content space-between
    margin-bottom 80px
    @media (max-width 767px)
      flex-wrap wrap
    span
      display inline-block
    &-text
      opensansRegular(24px)
      font-weight: normal
      font-style: normal
      font-stretch: normal
      line-height: 1.33
      letter-spacing: normal
      max-width 475px
      @media (max-width 767px)
        margin-bottom 30px
      &:before
        content: counter(list)
        formular(32px)
        display block
        font-weight: bold
        font-style: normal
        font-stretch: normal
        line-height: normal
        letter-spacing: normal
        margin-bottom 15px
        @media (max-width 767px)
          text-align center
    &-img
      width 100%
      height auto
      max-width 270px
      position relative
      img
        width 100%
