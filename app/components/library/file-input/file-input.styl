.file-input
  border: 1px dashed $gainsboro
  border-radius: 4px
  margin-bottom: 32px
  @media (max-width: 767px)
    margin-bottom: 16px
  .needsclick
    opensansSemibold()
    display: flex
    align-items: center
    color: $madison
    padding: 9px
    cursor: pointer

    .file-input__text
      margin-left: 16px
      margin-right: auto

    & > svg
      width: 24px
      height: 24px
