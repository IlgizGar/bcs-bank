.dropdown .dropdown__list
  position: absolute
  z-index: 300
  top: calc(100% + 8px)
  left: 0

  overflow-y: scroll
  width: 100%
  max-height: 190px

  border-radius: 4px
  background-color: $color_light
  box-shadow: 0 2px 4px 0 rgba($color_dark, 0.05), 0 4px 24px 0 rgba($color_dark, 0.03);

  &::-webkit-scrollbar
    width: 4px
    height: 4px

    &-track
      background: none
    &-thumb
      max-height: 16px
      border-radius: 5px
      background-color: $color_borders

  ul

    li
      display: flex
      align-items: center

      height: 44px
      padding: 0 16px

      opensansRegular()
      color: $color_text

      transition: all $interval

      &:first-child
        border-top-left-radius: 4px
        border-top-right-radius: 4px

      &:last-child
        border-bottom-left-radius: 4px
        border-bottom-right-radius: 4px

      &:hover
        background-color: $color_card_hover
