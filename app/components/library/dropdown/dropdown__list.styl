.dropdown .dropdown__list, .context .dropdown__list
  position: absolute
  z-index: 300
  top: calc(100% + 8px)
  left: 0

  overflow: auto
  width: 100%
  height: auto
  max-height: 190px

  border-radius: 4px
  background-color: $color_light
  box-shadow: 0 2px 4px 0 rgba($color_dark, 0.05), 0 4px 24px 0 rgba($color_dark, 0.03);
  outline: none

  ul
    li
      display: flex
      align-items: center

      min-width: 100%
      height: 44px
      padding: 0 18px 0 16px

      opensansRegular()
      color: $color_text
      white-space: nowrap

      transition: all $interval

      &:first-child
        border-top-left-radius: 4px
        border-top-right-radius: 4px

      &:last-child
        border-bottom-left-radius: 4px
        border-bottom-right-radius: 4px

      &:hover
        background-color: $color_card_hover

.jspContainer
  height: 100%
