.dropdown
  cursor: pointer
  position: relative

  &.state_explored
    .dropdown__wrap:after
      transform: scale(1,-1)

  &.state_filled
    .dropdown__wrap:after
      display: none

    .dropdown__label
      font-size: 12px

      transform: translateY(-20px)

    .dropdown__clear
      display: inline-block

    &:hover
      .dropdown__clear .button__wrap
        color: $color_borders

   .dropdown__clear
     display: none

  &.state_error
    .dropdown__wrap
      box-shadow: inset 0 0 0 1px $color_alert
