.carousel-controls.carousel-controls_theme-dark
  .carousel-controls__button
    color: $color_elem

    &:hover
      color: $color_hover

  .carousel-controls__pagination
    span:nth-child(1)
      color: $color_elem

    span:nth-child(2)
      background-color: $color_inactive

    span:nth-child(3)
      color: $color_inactive
