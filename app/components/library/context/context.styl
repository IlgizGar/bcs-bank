.context
  cursor: pointer

  display: inline-flex
  align-items: flex-end

  position: relative

  color: $color_default
  line-height: 0.65

  transition: all $interval

  span
    display: inline-block
    padding-right: 25px

  &:hover
    color: $color_hover

  .icon
    position: absolute

    top: 13px
    right: 0

    width: 15px
    height: 8px
