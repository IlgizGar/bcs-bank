.context .context__button
  cursor: pointer
  display: inline-flex
  align-items: flex-end

  position: relative

  height: 100%
  color: $color_default

  transition: all $interval

  span
    display: inline-block
    padding-right: 16px
    opensansBold()
    font-size: inherit
    white-space: nowrap
    @media(max-width 767px)
      white-space normal
      text-align left


  &:hover
    color: $color_hover

  .icon
    position: absolute

    //top: 55%
    top: 50%
    right: -14px

    width: 24px
    height: 24px

    transform: translateY(-50%)
    transform-origin: 50% 25%
    //transition: all $interval
