.context .context__button
  cursor: pointer
  display: inline-flex
  align-items: flex-end

  position: relative

  height: 100%
  color: $color_default
  //line-height: 0.65

  transition: all $interval

  span
    display: inline-block
    padding-right: 16px
    opensansBold(40px)
    white-space: nowrap

  &:hover
    color: $color_hover

  .icon
    position: absolute

    top: 55%
    right: 0

    width: 10px
    height: 6px

    transform: translateY(-50%)
    transform-origin: 50% 25%
    transition: all $interval
