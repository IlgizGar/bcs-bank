.context .context__button
  display: inline-flex
  align-items: flex-end

  position: relative

  height: 100%
  color: $color_default
  line-height: 0.65

  transition: all $interval

  span
    display: inline-block
    padding-right: 25px
    opensansBold(40px)

  &:hover
    color: $color_hover

  .icon
    position: absolute

    top: 50%
    right: 0

    width: 12px
    height: 8px

    transform: translateY(-50%)
    transform-origin: 50% 25%
    transition: all $interval
