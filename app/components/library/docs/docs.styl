.docs
  display: inline-flex
  flex-direction: column
  align-self: flex-start

  position: relative
  padding-left: 48px

  &:hover
    .docs__title
      color: $color_hover
    .icon-downloads
      color: rgba($color_elem, 0.6)

  .icon-downloads
    position: absolute

    top: 0
    left: 0

    width: 24px
    height: 24px

    color: rgba($color_elem, 0.4)
    transition: color $interval
