.docs.docs_theme-filled
  display: flex
  padding: 40px

  align-self stretch

  border-radius: 4px
  background-color: $color_card

  transition: background-color $interval
  @media (min-width: 768px) and (max-width 1279px)
    padding: 24px 56px 24px 16px

  @media (max-width: 767px)
    padding: 16px 56px 16px 16px

  &:hover
    background-color: $color_card_hover

    .docs__title
      color: $color_hover

    .docs__link
      border-color: $color_borders_light



  .icon
    position: absolute
    top: 48px
    &.icon-downloads
      top: 0
    right: 36px

    width: 16px
    height: 16px

    color: $color_text

    @media (min-width: 768px) and (max-width 1279px)
      top: 32px
      right: 16px

    @media (max-width: 767px)
      top: 16px
      right: 16px
