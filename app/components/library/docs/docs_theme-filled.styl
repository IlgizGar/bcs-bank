.docs.docs_theme-filled
  display: flex
  padding: 40px

  align-self stretch

  border-radius: 4px
  background-color: $color_card

  transition: background-color $interval
  @media (max-width 1279px)
    padding: 24px 16px

  &:hover
    background-color: $color_card_hover

    .docs__title
      color: $color_hover

    .docs__link
      border-color: $color_borders_light



  .icon-download
    position: absolute
    top: 48px
    right: 36px

    width: 16px
    height: 16px

    color: $color_text
