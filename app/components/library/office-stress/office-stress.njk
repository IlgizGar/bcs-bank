{% macro officeStress( options ) %}

    {% if options.data %}
        {% set options = options.data %}
    {% endif %}

    {% set class_sep = joiner(' ') %}

    {% set mods = '' %}
    {% set mods %}
        {% for key, value in options.mods -%}
            {{ class_sep() }} office-stress_{{ key }}-{{ value }}
        {%- endfor %}
    {% endset %}

    {% set attr = '' %}
    {% set attr %}
        {% for key, value in options.attr -%}
            {{ class_sep() }} data-{{ key }} = "{{ value }}"
        {%- endfor %}
    {% endset %}

    <div class="office-stress">
        <div class="office-stress__load" title="Средняя загруженность" data-stress="{{ options.stress }}" data-period="{{ options.h }}" style="height: {{ options.height }};">
        </div>
    </div>

{% endmacro %}
