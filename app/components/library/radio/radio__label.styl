.radio .radio__label

  display: inline-flex
  align-items: center

  position: relative;
  padding: 0 0 0 42px;
  cursor: pointer;

  opensansRegular()
  color: $color_text

  @media (max-width: 1279px)
    font-size: 14px

  .icon
    width: 16px
    height: 18px

  &:hover
    &:before
      border-color: $color_borders_light

  &:before
    content: ''
    position: absolute
    top: -2px
    left: 0
    width: 24px
    height: 24px
    border: 1px solid $color_borders
    border-radius: 50%

    transition: all $interval

  &:after
    content: ''
    position: absolute
    top: 7px
    left: 9px
    width: 8px
    height: 8px
    border-radius: 50%
    background: $color_selector
    opacity: 0

    transition: all $interval
