{% import "../currency/currency.njk" as Currency %}

{% macro radio( options ) %}
  {% set class_sep = joiner(' ') %}

  {% if options.attr %}
    {% set attr = '' %}
    {% set attr %}
      {% for key, value in options.attr -%}
        {{ class_sep() }} data-{{ key }} = "{{ value }}"
      {%- endfor %}
    {% endset %}
  {% endif %}

  {% if options.mods %}
    {% set mods = '' %}
    {% set mods %}
      {% for key, value in options.mods -%}
        {{ class_sep() }} dropdown_{{ key }}-{{ value }}
      {%- endfor %}
    {% endset %}
  {% endif %}

  <div class="radio {{ options.class }} {{ mods | safe }}" {{ attr | safe }}>
      <input class="radio__field" id="{{ options.id }}" type="radio" name="radio_{{ options.name }}" value="{{ options.value }}" {{ options.state | safe }}/>
      <label for="{{ options.id }}" class="radio__label">
        {% if options.currency %}
          {{ Currency.currency({ 'value': options.currency.label, 'state': options.currency.state }) }}
        {% else %}
          {{ options.label }}
        {% endif %}
      </label>
  </div>
{% endmacro %}
