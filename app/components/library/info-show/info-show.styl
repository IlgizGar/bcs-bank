.info-show
  margin-left 10px
.info-tooltip
  position fixed
  top 0
  left 0
  z-index 0
  pointer-events none
  width 0
  height 0
  opacity 0
  max-height 190px
  border-radius 4px
  background-color #fff
  box-shadow 0 2px 4px 0 rgba(0,0,0,0.05), 0 4px 24px 0 rgba(0,0,0,0.03)
  outline none
  letter-spacing normal
  font-size 12px
  -webkit-font-smoothing antialiased
  transition opacity 0.5s ease
  font-weight 300
  overflow hidden
  &.state_show
    padding 15px
    width 200px
    height auto
    overflow auto
    opacity 1
    pointer-events all
