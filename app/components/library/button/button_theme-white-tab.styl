.button:not(.button_theme-black).button_theme-white-tab
  .button__wrap
    color: $color_light
  &:after
    background-color: $color_light

  &:not(.state_active):hover
    .button__wrap
      color: $color_default

  &.state_active
    .button__wrap
      color: $color_light

.context.context_theme-white-tab
  .context__button
    color: $color_light
  &:after
    background-color: $color_light

  &:not(.state_active):hover
    .context__button
      color: $color_default

  &.state_explored
    .context__button
      color: $color_default
