{% import "../../../components/icon/icon.njk" as Icon %}
{% import "../../../components/inline-svg/inline-svg.njk" as Svg %}

{% macro button( options ) %}
    {% set tag = 'button' %}
    {% if options.href %}
        {% set tag = 'a' %}
    {% endif %}

    {% set class_sep = joiner(' ') %}

    {% set mods = '' %}
    {% set mods %}
        {% for key, value in options.mods -%}
            {{ class_sep() }} button_{{ key }}-{{ value }}
        {%- endfor %}
    {% endset %}

    {% if options.attr %}
      {% set attr = '' %}
      {% set attr %}
        {% for key, value in options.attr -%}
          {{ class_sep() }} data-{{ key }} = "{{ value }}"
        {%- endfor %}
      {% endset %}
    {% endif %}

    <{{ tag }} class='button {{ mods }} {{ options.class }} js-button' {% if options.href %} href={{ options.href }} {% endif %} {% if options.type %}type={{ options.type }} {% endif %} {{ options.state }} {{ attr | safe }}>
        <span class='button__wrap'>
            {% if options.title %}
                <span class='button__title js-button-title'>{{ options.title }}</span>
            {% endif %}
            {% if options.path  %}
                <span class='button__icon'>{{ Svg.inlineSvg({ 'path': [options.path] }) }}</span>
            {% elseif options.name %}
                <span class='button__icon'>{{ Icon.icon({ 'name': options.name }) }}</span>
            {% endif %}
        </span>
    </{{ tag }}>

{% endmacro %}
