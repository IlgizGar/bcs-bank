.button
  cursor: pointer
  position: relative

  display: inline-block
  height: 56px

  border-radius: 4px

  transition: background-color $interval

  &:hover
    background-color: $color_hover
    box-shadow: none

    .button__wrap
      color: $color_light

      .button__icon
        color: currentColor

  &:after
    display: none

  &[disabled] {
    cursor: default

    background-color: $color_borders_light
  }
