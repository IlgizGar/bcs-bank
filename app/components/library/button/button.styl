.button
  -webkit-appearance: none;
  *
    -webkit-appearance: none;
  cursor: pointer
  position: relative

  display: inline-block
  height: 56px

  border-radius: 4px

  transition: all $interval
  @media(max-width 991px)
    height 48px
  &:hover, &:not(.button_type-tab).state_active
    background-color: $color_hover
    box-shadow: none

    .button__wrap
      color: $button_hover

      .button__icon
        color: currentColor


    &.button_theme-uslugi:hover
      background-color transparent
      .button__icon
        img
          color: $black
          opacity: 1;

      .button__title
        transition: all $interval
        &:hover
          color: $black
          opacity 0.5

  &:after
    display: none

  &[disabled] {
    cursor: default

    background-color: $color_borders_light
  }
