.button.button_theme-light-tab
  .button__wrap
    color: $color_tab
  &:after
    background-color: $color_light

  &.state_active
    .button__wrap
      color: $color_light

.context.context_theme-light-tab
  .context__button
    color: $color_tab
  &:after
    background-color: $color_light

  &:hover
    .context__button
      color: $color_light

  &.state_explored
    .context__button
      color: $color_light
