.button.button_theme-uslugi
  width: 100%
  height: auto
  padding: 6px 40px

  box-shadow: 0 18 40px 0 rgba($color_dark, 0.1)
  @media(max-width 767px)
    padding: 6px 54px
    .button__title
      font-size: 16px
  .button__wrap
    justify-content: flex-start

  .button__title
    color: $color_text
    transition color 0.3s

  .button__icon
    margin-right: 16px
    width: 40px
    height: 40px
    background: url("../images/uslugi_white.svg") no-repeat center
    background-size contain
    transition opacity 0.3s
  &:hover
    .button__icon
      img
        opacity 0
    .button__title
      color: $white
