.button.button_view-text
  //height: auto;
  background-color: transparent
  vertical-align middle

  .button__wrap
    padding: 0
    color: currentColor

  &.button_theme-white
    .button__wrap .button__icon
      color: $color_tab
    &:hover
      .button__wrap .button__icon
        color: $color_default

  &:hover
    background-color: transparent
    .button__wrap
      color: $button_hover
