//.form
form
  position relative
  &.state_loading
    &:after
      content ''
      display flex
      flex-basis 100%
      justify-content center
      align-items center
      position absolute
      margin -15px
      width calc(100% + 30px)
      height calc(100% + 30px)
      top: 0
      left 0
      background-color rgba(0, 0, 0, 0.01)
      background-image url("../../assets/images/preloder.gif")
      background-repeat no-repeat
      background-position center
      background-size 25px auto
      z-index 200
