.card.card_view-lowercase
  .card__wrap
    justify-content: flex-start

  .card__action
    order: 1
    position relative
    border-top: solid 1px transparent
    padding-top 1px
    &:before
      content: ''
      position absolute
      border-top: solid 1px $color_borders
      top: -0px
      left 0
      width 100%
      height 0
  .card__content
    order: 0
