.card .card__figure
  position: absolute
  right: 0
  bottom: 0

  @media (min-width: 1280px)
    max-height: 300px
    max-width: 100%

  @media (min-width: 992px) and (max-width: 1279px)
    max-height: 250px
    max-width: 100%

  @media (max-width: 991px)
    max-height: 135px
    max-width: 100%
