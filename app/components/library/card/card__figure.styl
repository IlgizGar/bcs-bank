.card .card__figure
  position: absolute
  right: 0
  bottom: 0

  @media (min-width: 1280px)
    max-height: 372px
    max-width: 100%
    @media all and (-ms-high-contrast: none), (-ms-high-contrast: active)
      height 372px
      &[src="assets/illustrations/val_pop.svg"] {
        width 100%
        height unset
      }

  @media (min-width: 992px) and (max-width: 1279px)
    max-height: 290px
    max-width: 100%
    @media all and (-ms-high-contrast: none), (-ms-high-contrast: active)
      height 290px

  @media (max-width: 991px)
    max-height: 173px
    max-width: 100%
    @media all and (-ms-high-contrast: none), (-ms-high-contrast: active)
      height 173px
      &_theme-full
        height auto
