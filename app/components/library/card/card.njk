{% import "../../../components/icon/icon.njk" as Icon %}

{% macro card( options ) %}
    {% set tag = 'div' %}
    {% if options.href %}
        {% set tag = 'a' %}
    {% endif %}

    {% set head = 'h2' %}
    {% if options.head %}
        {% set head = options.head %}
    {% endif %}

    <{{ tag }} class="card js-card {{ options.class }}" {% if options.href %} href={{ options.href }} {% endif %}>
        <div class="card__wrap">
            <div class="card__content">
                <{{ head }} class="card__title">{{ options.title }}</{{ head }}>
                {% if options.subtitle %}
                    <p class="card__subtitle">{{ options.subtitle }}</p>
                {% endif %}
            </div>
            <a href="#" class="card__button">
                <span>Читать</span>
                {{ Icon.icon({ 'name': 'arrow' }) }}
            </a>
        </div>
    </{{ tag }}>

{% endmacro %}