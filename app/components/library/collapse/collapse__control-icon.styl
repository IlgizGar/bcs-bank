.collapse .collapse__control-icon
  position: absolute
  display: flex
  align-items: center
  justify-content: center
  right: 32px
  top: calc(50% - 8px)
  width: 16px
  height: 16px
  padding: 3px
  transition: transform 0.225s linear
  transform-origin: center center
  svg
    width: 100%
    height: 100%
    fill: $heather

.collapse .collapse__item
  &.collapse__item_state-open
    .collapse__control-icon
      transform: scaleY(-1)
      transition: transform 0.225s linear
