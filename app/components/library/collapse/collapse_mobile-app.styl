.collapse.collapse_mobile-app
  .collapse__item
    &:first-child
      border-top: 1px solid $gainsboro
    &:last-child
      border-bottom: 1px solid $gainsboro
    .collapse__control
      padding-left: 20px
      padding-right: 52px
      .collapse__control-title
        formular(15px, -0.3)
        line-height 19px
        color: black
      .collapse__control-icon
        right: 20px
        width: 12px
        height: 8px
        svg
          fill: $color_dark
    .collapse__content
      padding-left: 20px
      padding-right: 20px
      p
        formular(13px)
        line-height 21px
        color: gray
