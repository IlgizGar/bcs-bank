.collapse .collapse__content
  padding: 0 60px 35px 40px
  display: none
  transition: background-color 0.175s linear
  *
    transition: opacity 0.225s linear
    opacity: 0
  @media (max-width 1279px)
    padding-left: 16px
    padding-right: 16px
    padding-bottom: 32px
.collapse .collapse__item
  &.collapse__item_state-open
    .collapse__content
      *
        transition: opacity 0.225s linear
        opacity: 1
