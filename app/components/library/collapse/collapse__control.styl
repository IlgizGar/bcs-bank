.collapse
  .collapse__item
    .collapse__control
      transition: all 0.175s linear
      position: relative
      padding: 32px 60px 31px 40px
      cursor: pointer
      background-color transparent
      font-size 14px
      @media (max-width 1279px)
        padding: 24px 54px 24px 16px

      .collapse__control-underground
        display: flex
        align-items center
        .collapse__control-distance
          color: $slate_grey

  &.collapse_theme-grey
    .collapse__item
      .collapse__control
        &:hover
          background-color: transparent
          & + .collapse__content
            background-color: transparent

