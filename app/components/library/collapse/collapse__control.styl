.collapse
  .collapse__item
    .collapse__control
      transition: all 0.175s linear
      position: relative
      padding: 32px 60px 31px 40px
      cursor: pointer
      @media (max-width 1279px)
        padding: 24px 54px 24px 16px
  &.collapse_theme-grey
    .collapse__item
      .collapse__control
        &:hover
          background-color: $white_smoke_dark
          & + .collapse__content
            background-color: $white_smoke_dark

