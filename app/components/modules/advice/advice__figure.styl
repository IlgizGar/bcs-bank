.advice .advice__figure
  width: 100%
  height: 255px
  transition all 0.7s ease

  @media (min-width: 992px) and (max-width: 1279px)
    height: 193px

  @media (min-width: 768px) and (max-width: 991px)
    height: 143px

  @media (max-width: 767px)
    height: 192px


.advice
  &:hover
    .advice__figure
      transform scale(1.05)
