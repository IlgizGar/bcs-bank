.footer .footer__wrap
  .footer__info

    display: flex

    @media (min-width: 1280px)
      flex-direction: column
      width: 300px

    @media (min-width: 768px) and (max-width: 1279px)
      flex-direction: row
      justify-content: space-between
      align-content: stretch

      margin-bottom: 32px

    @media (max-width: 1279px)
      width: 100%