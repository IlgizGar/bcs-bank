<footer class="footer js-footer">
  <div class="page__container">
    <div class="footer__wrap">
      <div class="footer__info">
        <div class="footer__contacts">
          <p class="footer__contacts-phone">8 800 500 7065</p>
          <p class="footer__contacts-inform">Бесплатный звонок по России</p>
          {{ Button.button({ 'title': 'Задать вопрос', 'href': '#question-modal-form', 'mods': {'theme': 'default'}, 'class': 'footer__contacts-button js-open-modal'  }) }}
        </div>
        <div class="footer__socials footer__socials_state-desktop">
          {{ Socials.socials({ 'mods': {'type': 'icon', 'theme': 'gray', 'view': 'outlined', 'size': 'low'}, 'title': 'Присоединяйтесь' }) }}
          {{ Socials.socials({ 'mods': {'type': 'icon', 'theme': 'gray', 'view': 'outlined', 'size': 'low'}, 'title': 'Доступно для устройств', 'device': 'true' }) }}
        </div>
      </div>
      <div class="footer__menu">
        {% for item in menu %}
          <div class="footer__menu-group js-footer-menu">
            <div class="footer__menu-title">
              {{ item.title }}
              {{ Icon.icon({ 'name': 'dropdown' }) }}
            </div>
            <div class="footer__menu-content js-footer-menu-content">
              {% for el in item.items %}
                {{ Button.button({ 'href': el.href, 'title': el.name, 'mods': {'type': 'link', 'theme': 'gray', 'view': 'text'}, 'class': 'footer__menu-link' }) }}
              {% endfor %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="footer__about">
    <div class="page__container">
      <div class="footer__about-wrap">
        <div class="footer__credentials">
          {{ Button.button({ 'href': '#', 'title': 'Информация о максимальных процентных ставках по вкладам физических лиц', 'mods': {'type': 'link', 'theme': 'gray', 'view': 'text'}, 'class': 'footer__credentials-link' }) }}
