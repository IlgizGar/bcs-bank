.offices
  position: relative
  display: flex
  flex-direction row-reverse
  .map-wrap
    margin-top 30px!important
  .collapse .collapse__content
    .collapse__item
      margin-right -20px
      margin-left -20px
    *
      opacity 1
  //@media (max-width: 991px)
  //  margin-top: 183px

  &:not(.state_listed)
    @media (max-width: 991px)
      .offices__content
        top: -183px

      //.offices__tabs
      //  display: none

  &.state_listed
    @media (max-width: 991px)
      margin-top: 0

    .offices__tabs
      display: block

    .offices__map-wrapper
      @media (max-width: 991px)
        display: none

    .offices__content
      @media (max-width: 991px)
        position: relative
        top: 0

      @media (min-width: 768px) and (max-width: 991px)
        min-height: 440px

      @media (max-width: 767px)
        min-height: 330px

