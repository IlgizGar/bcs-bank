.offices .offices__zoom-button
  display: flex
  align-items: center
  justify-content: center
  background-color: $white
  color: $speech_blue
  height: 64px
  width: 64px

  box-shadow: 0 10px 20px 0 rgba(0, 0, 0, 0.1), 0 0 50px 0 rgba(255, 255, 255, 0.5)
  cursor: pointer
  transition: all $interval
  &:hover
    background-color: $royal_blue
    color: $white

  &:first-child
    border-top-left-radius: 4px
    border-top-right-radius: 4px
    &:hover::after
      display: none;
    &::after
      content:""
      display: block;
      position: absolute;
      top: 50%;
      width: 32px;
      height: 1px;
      background-color $gainsboro


  &:last-child
    border-bottom-left-radius: 4px
    border-bottom-right-radius: 4px
