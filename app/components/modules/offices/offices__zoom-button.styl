.offices .offices__zoom-button
  display: flex
  align-items: center
  justify-content: center
  background-color: $white
  color: $speech_blue
  border-radius: 4px
  height: 56px
  width: 56px
  box-shadow: 0 10px 20px 0 rgba(0, 0, 0, 0.1), 0 0 50px 0 rgba(255, 255, 255, 0.5)
  cursor: pointer
  transition: all $interval
  &:hover
    background-color: $royal_blue
    color: $white
  &:first-child
    margin-bottom: 16px
