.offices .offices__content
  overflow hidden
  max-width: 476px
  width: 100%
  height: 518px
  position: absolute
  top: 80px
  left: 50%
  transform: translateX(-600px)
  background-color: $white
  border-radius: 4px
  box-shadow: 0 10px 20px 0 rgba(0, 0, 0, 0.1), 0 0 50px 0 rgba(255, 255, 255, 0.5)

  @media (min-width: 992px) and (max-width: 1279px) {
    max-width: 376px;

    transform: translateX(-48vw);
  }
  +.offices__switch-view
    width 100%

  @media (max-width: 991px)
    left: 0
    width: 100%
    height: auto
    max-width: unset

    transform: translateX(0)
    box-shadow: none
    border-radius: 0
