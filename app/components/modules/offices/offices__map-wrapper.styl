.offices .get-geo
  width: 64px!important;
  height: 64px!important;
  padding: 16px;
  position: absolute;
  z-index: 10;
  top: 3%;
  right: 3%!important;
  left auto
  box-shadow: 0px 2px 20px rgba(0, 0, 0, 0.05), 0px 4px 4px rgba(0, 0, 0, 0.05);
  cursor: pointer;
  background-color $white
  border-radius: 4px;
  svg
    fill none
    color $royal_blue
    stroke-width: 3;
    height: 100%;
    width: 100%;
  &:hover
    background-color: $royal_blue
    svg
      color: $white
      stroke-width: 3;


