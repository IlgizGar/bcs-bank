.page
  .landing-fx
    overflow hidden
    .page__container
      max-width 1248px
    &.products-detail
      .products-detail__content
        padding 50px 0
      .heading.heading_type-large
        font-size 49px
        line-height 1.21
        letter-spacing -0.7px
      .products-detail__figure .illustration
        top -155px
        right 51px
        @media (max-width 769px)
          top: -10px
          right 28px
    .button:not(.button_type-icon) .button__wrap
      padding 0 43px

    .section__header_theme-blue
      position relative
      padding-bottom 17px
      .features
        margin-top 18px
        .features__item
          width auto
          margin-right 42px
          .feature__title
            margin-bottom 16px
          &:last-child
            margin-right 0
    .feature__content
      .feature__title
        margin-bottom 18px
      .feature__text
        line-height 22px
    .currency span
      font-size 23px
    .calculator
      margin-bottom 13px
      .heading
        &.heading_margin-medium
          margin-top 6px
          padding-bottom 16px
      .calculation
        margin-top 12px
      @media (max-width 769px)
        overflow hidden
    .brand-features
      .brand-features__item
        .brand-features__title
          margin-top 23px
          margin-bottom: 25px;
    .mobile
      .mobile__content
        padding-bottom: 79px;
        width: calc(53% - 40px);
        @media (max-width 769px)
          width 100%
      &.section_landing-info
        margin-bottom: 96px;
        .mobile__figure
          .illustration
            right 90px
        .heading
          letter-spacing 0.2px
        .section__text.section__text_theme-normal a, .section__text.section__text_theme-normal p
          margin-bottom 4px
    #section-request
      overflow hidden

