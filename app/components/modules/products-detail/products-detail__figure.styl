.products-detail .products-detail__figure

  col()
  @media (min-width: 1440px)
    size(6)
    shift-left(-1)

  @media (min-width: 1280px) and (max-width: 1439px)
    size(5)

  @media (min-width: 992px) and (max-width: 1279px)
    size(4)

  @media (min-width: 768px) and (max-width: 991px)
    size(6)

  @media (max-width: 767px)
    size(12)
    display: flex
    justify-content: center

    margin: 16px auto

  .illustration
    z-index: 1
    position: absolute
    right: 20px

    @media (min-width: 1280px)
      top: -80px

      height: 683px
      width: 683px

    @media (min-width: 768px) and (max-width: 1279px)
      top: 0

      height: 446px
      width: 446px

    @media (max-width: 767px)
      position: relative
      right: unset

      width: 154px
      height: 154px

    .illustration-image
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      width: auto
      height: auto
      max-width: 100%
      max-height: 100%
      &_landing-fx
        left 60%
        border 3px solid $color_default
        border-radius 40px
        box-shadow 0 0 20px 5px rgba(0, 0, 0, 0.16)
        max-width 425px
        @media (max-width: 1279px) and (min-width: 992px)
          max-width 275px
          border-radius 25px
        @media (max-width 1024px)
          border-radius 10px
          max-width: 180px
        &:first-child
          left 74%
          top: 59%
        &:last-child
          left 60%


