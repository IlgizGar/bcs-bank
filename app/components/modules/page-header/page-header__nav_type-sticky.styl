.page-header_vacancy
  .page-header__nav.page-header__nav_type-sticky
    position:fixed
    top:0
    background-color: $white
    box-shadow: 0 0 30px 0 rgba(0, 1, 26, 0.14)
    z-index 20
    .section__wrap
      .page-header__nav-title
        formular()
        font-size: 24px
        letter-spacing: 0.1px;
        display: block
        max-width: 403px
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
      &>.button_theme-white
        background-color: $color_default
        order: 3
        margin-left: 39px
        margin-right: 0
        .button__wrap
          color: $color_light
        &:hover
          background-color: $color_hover
          box-shadow: none

      .socials
        order: 2
        margin-left: auto
        .button_theme-white
          color: $gainsboro
