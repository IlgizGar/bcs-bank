.plastic-card .plastic-card__content
  .plastic-card__header

    display: flex
    align-items: center

    @media (min-width: 768px)
      height: 50px

    @media (max-width: 767px)
      align-items flex-start
      justify-content space-between
      line-height: 0.8

    .heading
      formularBold()
      font-size: 40px

      @media (min-width: 768px)
        white-space: nowrap
        transform: translateY(-4px)

      @media (max-width: 767px)
        font-size: 24px
        line-height: 1.33
        white-space: normal
