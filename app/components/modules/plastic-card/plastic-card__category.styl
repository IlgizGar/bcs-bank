.plastic-card
  .plastic-card__content
    .plastic-card__header
      .plastic-card__category
        pointer-events none
        margin-left: 40px
        @media (max-width: 767px)
          margin-left: 0
          white-space nowrap
        .button
          color: $slate_grey
          box-shadow 0 0 0 1px $gainsboro
          &:hover
            background-color transparent
            .button__wrap
              color: $slate_grey
  &.plastic-card_theme-blue
    .plastic-card__content
      .plastic-card__header
        .plastic-card__category
          pointer-events none
          .button
            color: $perano
            box-shadow 0 0 0 1px $perano
            &:hover
              background-color transparent
              .button__wrap
                color: $perano
