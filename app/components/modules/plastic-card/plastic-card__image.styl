.plastic-card .plastic-card__image

  margin-left: auto
  position: relative

  width: 1px

  @media (max-width: 991px)
    order: -1

    margin-left: unset
    width: auto
    height: 170px

    text-align: center

  .image
    position: absolute
    right: 0

    width: auto

    @media (min-width: 1280px)
      height: 580px
      max-width: 580px

    @media (min-width: 992px) and (max-width: 1279px)
      top: 52px
      max-width: 320px

    @media (max-width: 991px)
      position: relative

      height: 100%

