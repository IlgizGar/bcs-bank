.plastic-card

  position: relative
  margin-bottom: 40px

  overflow: hidden
  width: 100%
  padding: 56px 0 56px 64px

  border-radius: 4px
  background-color: $color_card

  &:last-child
    margin-bottom: 0


  @media (min-width: 768px) and (max-width: 991px)
    padding: 32px 0  32px 32px

  @media (max-width: 767px)
    padding: 0 16px 8px
    margin-bottom: 20px
