.state_load-start
  background $royal_blue
  .page
    opacity 0
    transition none
.state_load-end
  background $royal_blue
  &:before,&:after
    content ''
    position fixed
    background $color_light
    left 0
    width 100%
    z-index 1
  &:before
    height 57px
    top: 0
    animation upShow 0.8s ease-out
    @media (max-width: 1279px)
      height 114px
    @media (max-width: 767px)
      height 104px
  &:after
    height calc(100vh - 670px)
    bottom: 0
    animation downShow 0.8s ease-out forwards
    transform translateY(101%)
    @media (max-width: 1279px)
      height calc(100vh - 552px)
    @media (max-width: 767px)
      height calc(100vh - 608px)
  .page
    background $color_light
    transition opacity 0.8s ease-out
    transition-delay 0.8s
    position relative
    z-index 2
  .section__header-controls,.carousel__progressbar,.index-products,.menubar,.heading,.illustration,.index-carousel__features
    opacity 0


body
  &.state_animations-start
    background $color_light
    .menubar
      animation menubarShow 1s ease-out
      opacity 1
    .section__header-controls,.carousel__progressbar,.index-products
      animation headerControlsShow 1s ease-out
      opacity 1
    .slick-slide
        .heading,.illustration
          opacity 0
          animation slideHeadingHide 1s ease-out
        .index-carousel__features
          opacity 0
          animation slideFeaturesHide 1s ease-out
        &.state_animate
          .heading,.illustration
              animation slideHeadingShow 1s ease-out forwards
          .index-carousel__features
              animation slideFeaturesShow 1s ease-out forwards
          &.state_init
            .heading,.illustration
              animation-delay  1s
            .index-carousel__features
              animation-delay  1s
    .card__heading
      opacity 0
      transition opacity 0.8s ease-out
    .card__figure
      opacity 0
      transform translateY(10px);
      transition all 0.8s ease-out
    .animate
      .index-products__card
        .card__button .icon
          transition all 0.3s ease-out
        .card__action,.card__content
          background transparent!important
        &:before
          content: ''
          display block
          position absolute
          width 100%
          height 100%
          background $slate_grey
          top: 0
          left 0
          opacity 0.3
          transform scale(0,0)
          border-radius 25px
        &:hover
          opacity 1
          .card__button .icon
            transform translateX(10px)
          &:before
            transform scale(1,1)
            opacity 0
            transition all 0.3s ease-out
      .mobile__figure,.company__figure
        transform translateY(28px)
        opacity 0
        transition all 0.8s ease-out
      .heading,.section__text,.section__heading .button
        transform translateX(-28px)
        opacity 0
        transition all 0.8s ease-out
      .section__text
        transition-delay 0.3s
      &.services,&.advices,&.company
        .card,.section__element
          transform translateY(28px)
          opacity 0
          transition all 0.8s ease-out
          &:nth-child(1)
            transition-delay 0.2s
          &:nth-child(2)
            transition-delay 0.4s
          &:nth-child(3)
            transition-delay 0.8s
      &.footer
        .page__container
          transform translateY(28px)
          opacity 0
          transition all 0.3s ease-out
    .state_animate-page
      .card__heading
        opacity 1
      .card__figure
        opacity 1
        transform translateY(0);
      .mobile__figure,.company__figure
          transform translateY(0)
          opacity 1
      .heading,.section__text,.section__heading .button
        transform translateX(0)
        opacity 1
      &.services,&.advices,&.company
        .card,.section__element
          transform translateY(0)
          opacity 1
      &.footer
        .page__container
          transform translateY(0)
          opacity 1




@keyframes upShow
  from
    transform translateY(-101%)
  to
    transform translateY(0)

@keyframes downShow
  from
    transform translateY(101%)
  to
    transform translateY(0)

@keyframes menubarShow
  from
    transform translateY(-28px)
    opacity 0
  to
    transform translateY(0)
    opacity 1

@keyframes headerControlsShow
  from
    transform translateY(28px)
    opacity 0
  to
    transform translateY(0)
    opacity 1

@keyframes slideHeadingShow
  from
    transform translateY(-28px)
    opacity 0
  to
    transform translateY(0)
    opacity 1

@keyframes slideFeaturesShow
  from
    transform translateY(28px)
    opacity 0
  to
    transform translateY(0)
    opacity 1

@keyframes slideHeadingHide
  from
    transform translateY(0)
    opacity 1
  to
    transform translateY(-28px)
    opacity 0

@keyframes slideFeaturesHide
  from
    transform translateY(0)
    opacity 1
  to
    transform translateY(28px)
    opacity 0

