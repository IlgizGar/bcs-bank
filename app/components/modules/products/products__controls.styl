.products .products__controls
  display: flex
  justify-content: space-between
  flex-grow: 1
  @media (max-width 767px)
    position static
    padding-bottom: 2px
    margin-left: -16px
    margin-right: -16px
    overflow-x auto
    width: calc(100% - 16px);
    max-width calc(100% - 30px);
    &::-webkit-scrollbar
      width: 0
      height: 0
    &
      -ms-overflow-style: none
    &
      overflow: -moz-scrollbars-none
    .button
      margin-left: 16px
      margin-right 0
    .tabbar__marker
      margin-left 16px
