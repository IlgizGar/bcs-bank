.landing-white-block
  background-color $color_light
  margin-top 64px
  padding 43px 56px
  box-shadow 0 4px 10px 0 rgba(0, 25, 52, 0.05)
  width 100%
  display flex
  flex-direction row
  justify-content space-between
  align-items center
  @media (max-width: 991px)
    padding 40px
    flex-wrap wrap
    margin-right 20px
    margin-left 20px
    max-width calc(100% - 40px)
    .features
      flex-wrap wrap
      justify-content center
      text-align center
      border-right none
      margin 0 auto
      &:after
        content ''
        display block
        width 129px
        height 0
        border-bottom 1px solid $color_borders
      .feature
        display block
        margin-bottom 40px
        width 100%
        &__title
          font-size 24px
          line-height 26px
        &__text
          font-size 14px
          opacity 0.7
          margin-top 16px

