.bonus .bonus__content
  .bonus__item
    .bonus__link
      display: flex
      align-items: center

      flex: 1;

      height: 100%
      padding: 0 30px 0 40px

      border-top-right-radius: 4px
      border-bottom-right-radius: 4px

      &:hover
        .text, .bonus__title, .bonus__subtitle, .bonus__amount
          color: $color_light

        background-color: $color_default

