.bonus-types-list
  display flex
  width 100%
  flex-basis 100%
  flex-direction row
  justify-content space-between
  align-items stretch
  padding-top 12px
  flex-wrap nowrap
  &__item
    background $color_card
    padding 40px
    width 373px
    max-width 100%
    padding-bottom 53px
    @media (max-width: 1280px)
      margin-right 15px
      margin-bottom 15px
    @media (max-width: 768px)
      width 100%
      margin-right 0
    &-title
      font-size 24px
      font-weight bold
      font-style normal
      font-stretch normal
      line-height 1.33
      letter-spacing: normal
      margin-bottom 28px
    &-list
      li
          font-size 16px
          font-weight normal
          font-style normal
          font-stretch normal
          line-height 1.5
          letter-spacing normal
          position relative
          padding-left 33px
          margin-bottom 12px
          &:before
              content: ''
              display: block
              width: 6px
              height: 6px
              border-radius: 50%
              position: absolute
              left: 5px
              top: calc(50% - 1px)
              background: $black

  @media (max-width: 1280px)
    flex-wrap wrap
    justify-content flex-start
