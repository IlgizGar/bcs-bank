.bonus-card
  display inline-block
  width 269px
  position relative
  &__text
    margin-top 10px
    display inline-block
  &__image
    opacity 0.3
    transition opacity 0.3s ease-in-out
    width 100%
    height auto
    &_no-active
      padding-top 62%
      display block
      width 100%
      border-radius 8px
      background-color $very_light_gray
      background-image url("../../assets/images/svg/full-logo-dark.svg")
      background-repeat no-repeat
      background-position 14px 19px
      background-size 81px 21px

.bonus-card-list
  display flex
  flex-basis 100%
  width 100%
  justify-content space-between
  a
    display inline-block
    max-width 373px
    width 100%
  &__carousel-controls
    @media (min-width: 768px)
      margin-top -100px
      margin-bottom 100px
      justify-content flex-end

.state_active
  .bonus-card
    &__image
      opacity 1


.bonus-card-image
  max-width 373px!important
