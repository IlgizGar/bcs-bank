.bonus-card
  display inline-block
  width 269px
  position relative
  opacity 0.3
  transition opacity 0.3s ease-in-out
  &__image
    width 100%
    height auto
    &_no-active
      padding-top 60%
      display block
      width 100%
      border-radius 8px
      background-color $very_light_gray

.bonus-card-list
  display flex
  flex-basis 100%
  width 100%
  justify-content space-between
  &__carousel-controls
    @media (min-width: 768px)
      margin-top -100px
      margin-bottom 100px
      justify-content flex-end

.state_active
  .bonus-card
    opacity 1

