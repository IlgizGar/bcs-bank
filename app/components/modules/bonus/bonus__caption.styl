.bonus
  .bonus__item
    .bonus__caption
      display: flex
      flex-direction column

      position: relative

      color: $color_elem

      @media (min-width: 768px)
        align-items: flex-start
        justify-content: center

        flex: 1

        padding-left: 40px
        padding-right: 32px

        border-top-right-radius: 4px
        border-bottom-right-radius: 4px

      @media (max-width: 767px)
        order: -1

        min-height: 64px
        padding: 24px 48px 24px 24px

      .icon
        position: absolute
        top: 24px
        right: 24px

        width: 16px
        height: 16px
        
        @media (min-width: 768px)
          display: none

