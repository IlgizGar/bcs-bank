.bonus-filter
  @media (min-width: 992px)

    opacity: 1 !important;
    visibility: visible !important;
    height: auto !important;

    position: relative
    top: unset !important
    left: unset !important
    margin-top: 0

    border-top: none
    background-color: transparent

    .page__cover
      display: none

  @media (max-width: 991px)
    z-index: 999
    position: fixed
    top: 0 !important
    left: 0

    margin-top: 0

    width: 100%
    height: 100%
    padding: 56px 20px 30px

    border-radius: 0
    background-color: $color_light