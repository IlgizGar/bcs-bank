{% import "../../library/radio/radio.njk" as Radio %}
{% import "../..//library/heading/heading.njk" as Heading %}

<div class="form__form-delivery mb-32">
  {{ Heading.heading({ 'title': 'Получение карты' | striptags(true) | escape | nl2br, 'mods': { 'type': 'normal', 'margin': 'small' } }) }}
  <div class="form__title-short">Выберите способ получения карты</div>
  {{ Radio.radio({'class': 'form-check-delivery js-check-delivery_courier mb-24', 'label': 'Доставка курьером', 'value': 'courier' , 'name': 'delivery', 'id': 'delivery-c'}) }}
  <div class="form_office-delivery-wrapper">
    <div class="form_office-delivery js-address-delivery">
      {{ Radio.radio({'class': 'form-check-delivery js-check-delivery_office', 'label': 'Забрать из офиса',  'value': 'office', 'name': 'delivery', 'id': 'delivery-o'}) }}
    </div>
  </div>
</div>
