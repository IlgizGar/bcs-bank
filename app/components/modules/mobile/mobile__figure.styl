.mobile .mobile__figure
  position: absolute
  right: 50px
  //bottom: -40px;
  max-height: calc(100% + 80px)
  max-width: 50%

  @media (min-width: 768px) and (max-width: 991px)
    right: 45px
    //bottom: 0
    //max-width: 275px

  @media (min-width: 576px) and (max-width: 767px)
    right: 20px
    bottom: 20px
    max-width: 200px

  @media (max-width: 575px)
    display: none
