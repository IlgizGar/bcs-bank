.services .services__block.services__block_theme-course

  tbody, thead
    tr td
      height: auto !important
      text-align: left !important

  @media (min-width: 1280px)
    margin-top: 55px

    .services__input
      margin-bottom: 16px

  @media (max-width: 1279px)
    margin-top: 0

    .services__table-currency
      padding:22px 0 12px

    .services__input
      height: 55px

      margin-bottom: 8px

  .course__result
    display: flex
    justify-content: space-between
    align-items: flex-start
    align-content: stretch

    margin-bottom: 24px

    p:first-child
      opensansRegular()
      white-space: nowrap

    p:last-child
      opensansSemibold()
      color: $color_elem
