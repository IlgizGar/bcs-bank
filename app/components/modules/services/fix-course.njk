{% import "../../library/radio/radio.njk" as Radio %}
{% import "../../library/input/input.njk" as Input %}
{% import "../../icon/icon.njk" as Icon %}


<div class="card__heading">
  <h2 class="card__title">Фиксация курса</h2>
  <p class="card__subtitle mt-10">До 13 апреля 2018</p>
  <div class="card__opsys">
    {{ Button.button({ 'href': 'https://play.google.com/store/apps/details?id=cz.bsc.bcs', 'name': 'android', 'mods' : {'type': 'icon', 'theme': 'default', 'view': 'text'} }) }}
    {{ Button.button({ 'href': 'https://itunes.apple.com/ru/app/bks-onlajn/id652802642', 'name': 'apple', 'mods' : {'type': 'icon', 'theme': 'default', 'view': 'text'} }) }}
  </div>
</div>
<div class="services__block services__block_theme-course">
    <table class="services__table mb-24">
      <thead>
        <tr class="hidden-mobile">
          <th></th>
          <th class="services__table-action">Покупаю по</th>
          <th class="services__table-action">Продаю по</th>
        </tr>
      </thead>
      <tbody>
        <tr class="hidden-desktop">
          <td class="services__table-currency">USD</td>
          <td></td>
        </tr>
        <tr class="hidden-desktop">
          <td class="services__table-action">Покупаю по</td>
          <td class="services__table-action">Продаю по</td>
        </tr>
        <tr>
          <td class="services__table-currency hidden-mobile">USD</td>
          <td class="services__table-value">{{ Radio.radio({ 'class': 'js-course-radio', 'currency' : {'state': 'rise', 'label': '62.34'}, 'value': '62.34', 'name': 'course-fix', 'id': 'course-buy_usd', 'attr': { 'currency': 'USD'}, 'state': 'checked' }) }}</td>
          <td class="services__table-value">{{ Radio.radio({ 'class': 'js-course-radio', 'currency' : {'state': 'fall', 'label': '62.79'}, 'value': '62.79', 'name': 'course-fix', 'id': 'course-sell_usd', 'attr': {'currency': 'USD'} }) }}</td>
        </tr>
        <tr class="hidden-desktop">
          <td class="services__table-currency">EUR</td>
          <td></td>
        </tr>
        <tr class="hidden-desktop">
          <td class="services__table-action">Покупаю по</td>
          <td class="services__table-action">Продаю по</td>
        </tr>
      <tr>
        <td class="services__table-currency hidden-mobile">EUR</td>
        <td class="services__table-value">{{ Radio.radio({ 'class': 'js-course-radio', 'currency': {'state': 'fall', 'label': '59.4'}, 'value': '59.4', 'name': 'course-fix', 'id': 'course-buy_eur', 'attr': {'currency': 'EUR'} }) }}</td>
        <td class="services__table-value">{{ Radio.radio({ 'class': 'js-course-radio', 'currency': {'state': 'fall', 'label': '57.12'}, 'value': '57.12', 'name': 'course-fix', 'id': 'course-sell_eur', 'attr': {'currency': 'EUR'} }) }}</td>
      </tr>
      </tbody>
    </table>
  <input type="hidden" name="partner" value="bcs-bank">
    {{ Input.input({ 'label': 'Сумма', 'title': 'USD', 'class': 'services__input js-course-field', 'field': {'class': 'js-numeric-input js-course-input', 'name': 'fix-course', 'maxlength': '5', 'required': 'required'}, 'attr': {'max': '4000'} }) }}
    <label><input class="js-course-result-field" name="course-result-field" hidden value="0"></label>

    <div class="course__result">
      <p>Сумма сделки</p>
      <p><span class="js-course-result">0</span> RUB</p>
    </div>
</div>
