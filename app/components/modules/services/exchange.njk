    </tr>
    <tr>
      <td class="services__table-currency">GBR</td>
      <td>{{ Currency.currency({ 'value': '5.9', 'state': 'rise' }) }}</td>
      <td>{{ Currency.currency({ 'value': '6', 'state': 'rise' }) }}</td>
    </tr>
    <tr>
      <td class="services__table-currency">CHF</td>
      <td>{{ Currency.currency({ 'value': '5.9', 'state': 'rise' }) }}</td>
      <td>{{ Currency.currency({ 'value': '6', 'state': 'rise' }) }}</td>
    </tr>
    </tbody>
  </table>
