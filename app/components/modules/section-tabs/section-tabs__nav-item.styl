.section-tabs__nav-item
    display inline-block
    margin-right  40px
    padding 32px 0
    cursor pointer
    opacity: 0.9;
    font-size: 16px;
    color $slate_grey
    position relative
    transition color 0.3s ease
    opensansRegular()
    white-space nowrap
    font-weight 600
    @media (max-width: 991px)
        margin-right 15px
        font-size 15px
    &:after
        content ''
        width 100%
        height 3px
        background transparent
        display block
        position absolute
        bottom 0
        transition background 0.3s ease
    &.state_active
      color $black
      &:after
          background $speech_blue
