.index-carousel .index-carousel__feature
  @media (min-width: 992px)
    width: 206px

  @media (min-width: 768px) and (max-width: 991px)
    width: 206px
    
    &:nth-child(n+3) {
      display: none
    }

  @media (min-width: 576px) and (max-width: 767px)
    width: 150px

  @media (max-width: 575px)
    width: 150px

    &:nth-child(n+3) {
      display: none
    }