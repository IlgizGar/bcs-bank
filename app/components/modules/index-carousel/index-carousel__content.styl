.index-carousel .index-carousel__content

  padding-bottom 69px;
  color: $color_light;
  width: calc(62% - 40px)
  padding-top: 40px;
  @media (max-width: 831px)
    padding-top 0
    padding-bottom 0
    margin-right: 0;
    margin-left: 0;
    margin-top: 40px;
    width: 100%;
  @media (min-width: 832px) and (max-width: 1215px)
    width: calc(62% - 40px);
    padding-top: 0;
    padding-bottom: 64px;

  .heading
    margin-bottom 38px
    @media (min-width: 832px) and (max-width: 1215px)
      margin-bottom 33px
    @media (max-width: 831px)
      font-size 40px
      line-height: 48px;
      margin-bottom: 22px;
  &-text
    opensansRegular(24px)
    margin-bottom: 53px;
    margin-top: -14px;
    line-height: 1.6;
    @media (max-width 768px)
      opensansRegular(18px)

  col()
