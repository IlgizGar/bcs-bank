.index-carousel__image_full-screen
  position: absolute!important
  width: 100vw!important
  height: 100%!important
  left: 50%
  top: 0
  transform: translateX(-50%)
  margin: 0 auto!important
  .illustration
    width: 100%!important
    left: 0
    top: 0
    overflow-x: hidden
    @media (max-width: 767px)
      height: 430px!important
    &:after
      content: ''
      position: absolute
      width: 100%
      height: 100%
      top: 0
      left: 0
      background: transparentify($black,0.5)
    .illustration-image
      min-width: 100%
      min-height: 100%
      height: 100%
      max-width: none!important
