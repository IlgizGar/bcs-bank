.index-carousel .index-carousel__image
  position: relative

  width: 1px
  height: 100%

  svg
    position: absolute
    right: 0

    width: auto !important

  img
    position absolute
    right: 0

    @media (min-width: 1280px)
      top: -140px

      height: calc(100% + 140px)

    @media (min-width: 992px) and (max-width: 1279px)
      top: -120px

      height: calc(100% + 120px)

    @media (min-width: 768px) and (max-width: 991px)
      top: -108px

      height: calc(100% + 108px)

    @media (max-width: 767px)
      order: 0

      position: relative
      margin: 0 auto 16px

      width: 100%
      max-width: 200px