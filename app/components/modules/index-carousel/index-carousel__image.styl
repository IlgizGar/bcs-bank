.index-carousel .index-carousel__image
  position: relative

  //width: 1px

  col()
  @media (min-width: 1440px)
    size(7)
    shift-right(-1)
    shift-left(-1)

  @media (min-width: 1280px) and (max-width: 1439px)
    size(5)

  @media (min-width: 992px) and (max-width: 1279px)
    size(4)

  @media (min-width: 768px) and (max-width: 991px)
    size(6)

  @media (max-width: 767px)
    size(12)
    margin-bottom: 16px

  .illustration
    position: absolute
    right: 20px

    width: auto !important

    @media (min-width: 1280px)
      top: -160px

      height: 683px
      max-width: 683px

    @media (min-width: 768px) and (max-width: 1279px)
      top: -80px

      height: 438px
      max-width: 438px

    @media (max-width: 767px)
      position: relative
      margin: 0 auto

      height: 154px


