.tabbar__scroll-wrapper

  overflow-x: auto
  width: 100%
  max-width: 100%
  height: 100%
  &_with-more
    display flex
    margin-left -20px
    margin-right -20px
    overflow-x visible
    .button_type-link
      margin-left auto
      margin-right -40px
      .button__wrap
        height 100%

  &::-webkit-scrollbar
    width: 0
    height: 0

  &
    -ms-overflow-style: none

  &
    overflow: -moz-scrollbars-none
  @media (max-width 991px)
    margin-left 15px
  @media (max-width: 767px)
    .tabbar
      padding-top 15px
