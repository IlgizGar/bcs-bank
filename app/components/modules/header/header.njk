{% import "../../../components/library/button/button.njk" as Button %}
{% import "../../../components/library/contact/contact.njk" as Contact %}
{% import "../../../components/library/heading/heading.njk" as Heading %}
{% import "../../../components/library/socials/socials.njk" as Socials %}
{% import "../../../components/modules/menubar/menubar.njk" as Menubar %}
{% import "../../../components/inline-svg/inline-svg.njk" as Svg %}

<header class="header js-header">
  <div class="navbar js-navbar {% if page !== 'offices' %}state_init{% endif %}">
    <div class="page__container page__new-container">
      <div class="navbar__wrapper js-menubar">
        <a href="http://juravlev.rusrobots.ru/bks/index.html" class="menubar__logo navbar__logo">
          {{ Svg.inlineSvg({'path': ['assets/images/svg/logo-main.svg']}) }}
        </a>
        {% include "../../../components/modules/nav/nav.njk" %}
        {# Mobile #}
        {% if page === 'offices' %}
            {{ Button.button({ 'title': 'На карте', 'href': 'http://juravlev.rusrobots.ru/bks/offices.html', 'mods' : {'type': 'tab', 'theme': 'default-tab', 'view': 'underscore', 'tablet':'none'}, 'class': 'navbar__button js-btn-header-offices hidden-from-md state_active', 'attr': {'title': 'На карте'} }) }}
        {% else %}
            {{ Button.button({ 'title': 'На карте', 'href': 'http://juravlev.rusrobots.ru/bks/offices.html', 'mods' : {'type': 'tab', 'theme': 'default-tab', 'view': 'underscore'}, 'class': 'navbar__button js-btn-header-offices hidden-from-md', 'attr': {'title': 'На карте'} }) }}
        {% endif %}
        {{ Button.button({ 'title': 'Контакты', 'mods': {'type': 'tab', 'theme': 'default-tab', 'view': 'underscore', 'tablet':'none'}, 'class': 'navbar__button navbar__button_contacts navbar__button_type-dropdown js-btn-header-contacts button_type-tab hidden-from-md' }) }}

        {# Desktop #}
        {{ Button.button({ 'title': 'Контакты', 'name': 'dropdown', 'mods': {'type': 'icon-right', 'theme': 'gray', 'view': 'text'}, 'class': 'navbar__button navbar__button_contacts navbar__button_type-dropdown js-btn-header-contacts button_type-tab hidden-to-md hidden-md' }) }}
        {% if page === 'offices' %}
          {{ Button.button({ 'title': 'Офисы и банкоматы', 'href': 'http://juravlev.rusrobots.ru/bks/offices.html', 'mods' : {'type': 'tab', 'theme': 'default-tab', 'theme': 'gray', 'view': 'underscore'}, 'class': 'navbar__button js-btn-header-offices hidden-to-md hidden-md state_active', 'attr': {'title': 'На карте'} }) }}
        {% else %}
            {{ Button.button({ 'title': 'Офисы и банкоматы', 'href': 'http://juravlev.rusrobots.ru/bks/offices.html', 'mods' : {'type': 'tab', 'theme': 'default-tab', 'view': 'underscore'}, 'class': 'navbar__button js-btn-header-offices hidden-to-md hidden-md', 'attr': {'title': 'На карте'} }) }}
        {% endif %}
        <div style="display:flex;">
          {% include "../index-search/index-search.njk" %}
          <button class="menubar__burger js-menubar-burger">
{#            <span class="menubar__burger-title">Меню</span>#}
            <span class="menubar__burger-control">
            <span class="menubar__burger-line menubar__burger-line_first"></span>
            <span class="menubar__burger-line menubar__burger-line_second"></span>
            <span class="menubar__burger-line menubar__burger-line_third"></span>
          </span>
          </button>
        </div>

      </div>
    </div>
  </div>

  <div class="header__contacts js-header-contacts">
    <div class="page__container">
      {{ Heading.heading({ 'title': 'Свяжитесь с нами', 'mods': {'type': 'default', 'margin': 'normal'}, 'class': 'header__contacts-heading' }) }}
      <div class="header__contacts-wrap">
        {{ Contact.contact({ 'title': 'Частным клиентам', 'items': [{ 'name': 'Бесплатный звонок по России', 'value': '8 (800) 500-70-65', 'href': 'tel:+78005007065' },
          { 'name': 'Если вы звоните из-за рубежа', 'value': '+7 (495) 967-11-11', 'href': 'tel:+74959671111' }], 'class': 'header__contact' }) }}
        {{ Contact.contact({ 'title': 'Малому и среднему бизнесу', 'items': [{ 'name': 'Бесплатный звонок по России', 'value': '8 (800) 500-03-05', 'href': 'tel:+78005000305' },
          { 'name': 'Если вы звоните из-за рубежа', 'value': '+7 (495) 777-57-04', 'href': 'tel:+74957775704' }], 'class': 'header__contact' }) }}
        {{ Contact.contact({ 'title': 'Малому и среднему бизнесу', 'items': [{ 'name': 'Бесплатный звонок по России', 'value': '8 (800) 500-05-59', 'href': 'tel:+78005000559' },
          { 'name': 'Если вы звоните из-за рубежа', 'value': '+7 (495) 777-57-03', 'href': 'tel:+74957775703' }], 'class': 'header__contact' }) }}
        <div class="header__contacts-links">
          {{ Button.button({ 'title': 'Задать вопрос', 'href': '#question-modal-form', 'mods' : {'theme': 'default', 'size': 'wide'}, 'class': 'js-open-modal' }) }}
          {{ Socials.socials({ 'mods': {'type': 'icon', 'theme': 'gray', 'view': 'outlined', 'size': 'low'}, 'class': 'hidden-from-md' }) }}
          <p class="hidden-to-md">Вам ответят в ближайшее время</p>
        </div>
      </div>
    </div>
  </div>

  <div class="mobile-menu js-mobile-menu"></div>

  {% if header === 'blue' %}
    {{ Menubar.menubar({ "class": "section__menubar js-menubar", 'vars': {'header': 'blue'} }) }}
  {% else %}
    {{ Menubar.menubar({ "class": "section__menubar" }) }}
  {% endif %}
</header>

