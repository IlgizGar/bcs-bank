.header .header__contacts-links
  col()
  size(3)

  display: inline-flex
  flex-direction: column
  justify-content: space-between
  align-items: center

  padding: 40px 40px 32px

  border-radius: 6px
  background-color: $color_card

  p:last-child
    align-self: stretch

    opensansRegular();
    color: $color_text
    line-height: 1.75
    text-align: center

  @media (max-width: 1279px)
    size(12)

    display: flex
    flex-direction: column
    justify-content space-between

    z-index: 600

    position: absolute
    top: 0
    left: 0

    height: 100%
    padding: 0 0 30px 0

    background-color transparent