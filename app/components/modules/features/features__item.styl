.features
  .features__item

    @media (min-width: 768px)
      width: 198px

    @media (min-width: 768px) and (max-width: 991px)
      width: 198px

      &:nth-child(n+3) {
        display: none
      }

    @media (min-width: 576px) and (max-width: 767px)
      width: 150px

    @media (max-width: 575px)
      width: 150px

      &:nth-child(n+3) {
        display: none
      }