.section__header_landings
  display flex
  flex-direction row
  max-width 1000px
  margin 56px auto
  @media (max-width: 1279px)
    flex-wrap wrap
  &-title
    width 60%
    padding-top 25px
    display flex
    flex-direction column
    justify-content center
    align-items flex-start
    @media (max-width: 1279px)
      width 100%
      align-items center
      justify-content center
    .heading.heading_type-default
      font-size 48px
      padding-bottom: 50px;
      line-height 56px
      @media (max-width: 1279px)
        font-size 32px
        line-height 40px
  &-image
    width 40%
    text-align right
    @media (max-width: 1279px)
      width 100%
      margin-top 32px
      text-align center
    img
      margin-right -22px
      @media (max-width: 1279px)
        margin-right 0
        max-width 166px
  &-info
    display flex
    flex-direction row
    margin-bottom 70px
    >*
      &:first-child
        margin-right 32px
    .text
      b
        font-weight bold
