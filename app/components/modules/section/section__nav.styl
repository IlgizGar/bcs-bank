.section .section__nav
  position: relative

  width: 100%
  height: 106px;

  @media (max-width: 767px) {
    height: 88px
  }

  @media (min-width: 768px) {
    height: 80px
    box-shadow: inset 0 2px 0 -1px #9db6ef
  }

  overflow-x: auto

  &::-webkit-scrollbar
    width: 0
    height: 0

  &
    -ms-overflow-style: none

  &
    overflow: -moz-scrollbars-none

