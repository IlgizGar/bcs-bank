{% extends "layout/layout.njk" %}
{#{% extends "library/card/card.njk" %}#}

{% set root = "." %}
{% set title = "Полезное" %}
{% set header = 'blue' %}

{% import "../components/modules/menubar/menubar.njk" as Menubar %}
{% import "../components/library/heading/heading.njk" as Heading %}
{% import "../components/library/feature/feature.njk" as Feature %}
{% import "../components/library/button/button.njk" as Button %}
{% import "../components/library/card/card.njk" as Card with context %}
{% import "../components/modules/advice/advice.njk" as Advice %}
{% import "../components/library/input/input.njk" as Input %}
{% import "../components/icon/icon.njk" as Icon %}
{% import "../components/modules/tabbar/tabbar.njk" as Tabbar %}
{% import "../components/modules/brand-features/brand-features.njk" as BrandFeatures %}

{% block body %}
  <div class="page js-page">

    {% include "../components/modules/header/header.njk" %}

    <main role="main">
      <section class="section page__section">
        <div class="section__header section__header_theme-blue">

          <div class="carousel">
            <div class="carousel__progressbar">
              <div class="carousel__progressbar-bar js-carousel-progressbar"></div>
            </div>
            <div class="index-carousel js-carousel" data-id="index-header">
              <div class="index-carousel__slide" data-href="http://google.com" data-read-more-href="http://ya.ru" data-scroll-id=""><!-- data-read-more-href url для первой кнопки    data-href  для второй кнопки -->
                <div class="page__container">
                  <div class="index-carousel__wrap">
                    <div class="section__row">
                      <div class="index-carousel__content">
                        {{ Heading.heading({ 'tag': 'h1', 'title': 'Покупайте легко с Visa и Google Pay', 'mods': { 'type': 'large', 'margin': 'medium', 'theme': 'light' } }) }}
                        <div class="features index-carousel__features">
                          {{ Feature.feature({ 'title': '19,9%', 'text': 'годовых в рублях', 'mods': {'type': 'normal'}, 'class': 'index-carousel__feature'}) }}
                          {{ Feature.feature({ 'title': 'До 55 дней', 'text': 'беспроцентный период', 'mods': {'type': 'normal'}, 'class': 'index-carousel__feature'}) }}
                          {{ Feature.feature({ 'title': 'До 7%', 'text': 'Бонусы от покупок', 'mods': {'type': 'normal'}, 'class': 'index-carousel__feature'}) }}
                        </div>
                      </div>
                      <div class="index-carousel__image">
                        <div class="illustration" data-illustration="data_il1"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="page__container">
            <div class="section__header-controls">

              {{ Button.button({ 'href': '/bks/cards-detail_bks-platinum.html?#section-request', 'title': 'Оформить', 'mods': { 'theme': 'white' }, 'class': 'section__header-button js-redirect-scroll' }) }}

              <div class="carousel-controls js-index-carousel-controls">
                <div class="carousel-controls__pagination js-carousel-pagination" data-carousel="index-header">
                  <span>01</span><span></span><span></span>
                </div>
              </div>

            </div>
          </div>

        </div>
      </section>
      <section class="index-products section page__section">
        <div class="page__container">
          <div class="section__row">
            <div class="index-products__list">
              {{ Card.card({ 'href': '#', 'type': 'figure', 'img': 'assets/illustrations/index_credit.svg', 'view': 'uppercase', 'theme': 'black', 'hoverType': 'button', 'title': 'для Android', 'subtitle': 'Удобный способ \n оплаты через Google' | striptags(true) | escape | nl2br, 'link': 'Google Pay', 'mobile': 'Кредит', 'class': 'section__element index-products__card' }) }}
              {{ Card.card({ 'href': '#', 'type': 'figure', 'img': 'assets/illustrations/index_card.svg', 'view': 'uppercase', 'theme': 'black', 'hoverType': 'button', 'title': 'для iOS', 'subtitle': 'Бесконтактные \n платежи без усилий' | striptags(true) | escape | nl2br, 'link': 'Apple Pay', 'mobile': 'Карта', 'class': 'section__element index-products__card' }) }}
              {{ Card.card({ 'href': '#', 'type': 'figure', 'img': 'assets/illustrations/index_vklad.svg', 'view': 'uppercase', 'theme': 'black', 'hoverType': 'button', 'title': 'для Garmin', 'subtitle': 'Оплачивайте покупки \n часами Garmin' | striptags(true) | escape | nl2br, 'link': 'Garmin Pay', 'class': 'section__element index-products__card' }) }}
            </div>
          </div>
        </div>
      </section>

      <section class="index-products section page__section">
        <div class="page__container">
          {{ Heading.heading({ 'title': 'Оплачивайте покупки в магазинах, \n на сайтах с Google и Apple Pay', 'mods': { 'type': 'default', 'margin': 'normal' } }) }}
          <div class="section__nav-wrapper">
            <div class="section__nav products-detail__nav">
              <div class="page__container">
                <div class="section__wrap">
                  <div class="tabbar__scroll-wrapper tabbar__scroll-wrapper_with-more js-tab-scroll">
                    {{ Tabbar.tabbar({ 'anchor': { 'theme': 'default-tab', 'view': 'upperscore' }, 'tabs': [{'title': 'В магазине', 'id': 'in-shop' }, {'title': 'В интернете', 'id': 'by-internet'}] }) }}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>



      <div class="tabs js-tabs">
        <div id="in-shop" class="tabs__item js-tab">
          <section class="section page__section mb-64">
            {{ BrandFeatures.brandFeatures({ 'items': [
              {
                'icon': 'assets/images/svg/sand-clock-image.svg',
                'title': 'Разблокируйте ',
                'subtitle': 'Разблокируйте экран телефона',
                'mods': {
                'theme': 'lined'
              }
              },
              {
                'icon': 'assets/images/svg/kopeiki-image.svg',
                'title': 'Оплатите',
                'subtitle': 'Поднесите устройство к терминалу',
                'mods': {
                'theme': 'lined'
              }
              },
              {
                'icon': 'assets/images/svg/crown-image.svg',
                'title': 'Пользуйтесь',
                'subtitle': 'Платеж успешно проведен!'
              }
            ] }) }}
          </section>
        </div>
        <div id="by-internet" class="tabs__item js-tab state_invisible">
          <section class="section page__section mb-64">
            {{ BrandFeatures.brandFeatures({ 'items': [
              {
                'icon': 'assets/images/svg/sand-clock-image.svg',
                'title': 'Разблокируйте ',
                'subtitle': 'Разблокируйте экран телефона',
                'mods': {
                'theme': 'lined'
              }
              },
              {
                'icon': 'assets/images/svg/kopeiki-image.svg',
                'title': 'Оплатите',
                'subtitle': 'Поднесите устройство к терминалу',
                'mods': {
                'theme': 'lined'
              }
              },
              {
                'icon': 'assets/images/svg/crown-image.svg',
                'title': 'Пользуйтесь',
                'subtitle': 'Платеж успешно проведен!'
              }
            ] }) }}
          </section>
        </div>
      </div>

      <section class="mobile section mobile_theme-blue page__section page__section_theme-large">
        <div class="page__container">
          <div class="mobile__wrapper">
            <div class="section__row">
              <div class="mobile__content">
                {{ Heading.heading({ 'title': 'Удобный мобильный банк', 'mods': { 'type': 'default', 'margin': 'small', 'theme': 'light' } }) }}
                <div class="section__text section__text_theme-normal section__text_theme-light">
                  <p>Управление банковскими и инвестиционными продуктами</p>
                  <p>Оплата услуг без комиссии</p>
                  <p>Переводы по всему миру</p>
                  <p>Обмен валюты по курсу близкому к биржевому</p>
                  <p>Чат с оператором</p>
                </div>
                <div class="mobile__vendors">
                  {{ Button.button({ 'href': 'https://play.google.com/store/apps/details?id=cz.bsc.bcs', 'name': 'android', 'mods': { 'type': 'icon', 'theme': 'white', 'size': 'large' } }) }}
                  {{ Button.button({ 'href': 'https://itunes.apple.com/ru/app/bks-onlajn/id652802642', 'name': 'apple', 'mods': { 'type': 'icon', 'theme': 'white', 'size': 'large' } }) }}
                </div>
              </div>
              <div class="mobile__figure">
                <img class="illustration" src="assets/illustrations/mobile_bank.svg" alt="Легкий мобильный банк">
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="index-products section page__section section_theme-gray">
        <div class="page__container">
          {{ Heading.heading({ 'title': 'Полезное',  'mods': { 'type': 'default', 'margin': 'normal' } }) }}

          <div class="section__nav-wrapper">
            <div class="section__nav products-detail__nav">
              <div class="page__container">
                <div class="section__wrap">
                  <div class="tabbar__scroll-wrapper tabbar__scroll-wrapper_with-more js-tab-scroll">
                    {{ Tabbar.tabbar({ 'anchor': { 'theme': 'default-tab', 'view': 'upperscore' }, 'tabs': [{'title': 'Сервисы', 'id': 'services' }, {'title': 'Акции', 'id': 'actions'}] }) }}
                    {{ Button.button({ 'href': '#', 'title': 'Все сервисы', 'mods': { 'type': 'link', 'theme': 'default', 'view': 'text' } }) }}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="tabs js-tabs company">
          <div id="services" class="tabs__item js-tab">
            <div class="page__container">
             <div class="section__row">
                <div class="company__carousel carousel carousel_type-mobile">
                  <div class="js-carousel carousel__content" data-id="index-company" data-breakpoint="768">
                    {{ Card.card({ 'href': '#', 'view': 'lowercase', 'theme': 'black-unhovered', 'hoverType': 'button', 'title': 'Реализация залогового имущества', 'subtitle': 'Продажа непрофильных активов' | striptags(true) | escape | nl2br, 'link': 'Подробнее', 'class': 'section__element company__card '  }) }}
                    {{ Card.card({ 'href': '#', 'view': 'lowercase', 'theme': 'black-unhovered', 'hoverType': 'button', 'title': 'Смс - \n  информирование' | striptags(true) | escape | nl2br, 'subtitle': 'Оповещение о состоянии счетов в реальном времени' | striptags(true) | escape | nl2br, 'link': 'Подробнее', 'class': 'section__element company__card '  }) }}
                    {{ Card.card({ 'href': '#', 'view': 'lowercase', 'theme': 'black-unhovered', 'hoverType': 'button', 'title': 'Информационный центр', 'subtitle': 'Банковское обслуживание по телефону' | striptags(true) | escape | nl2br, 'link': 'Подробнее', 'class': 'section__element company__card ' }) }}
                  </div>
                  <div class="carousel-controls js-carousel-controls">
                    <div class="carousel-controls__pagination js-carousel-pagination" data-carousel="index-company">
                      <span>01</span><span></span><span></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div id="actions" class="tabs__item js-tab state_invisible">
            <div class="page__container">
              <div class="section__row">
                <div class="company__carousel carousel carousel_type-mobile">
                  <div class="js-carousel carousel__content" data-id="index-company" data-breakpoint="768">
                    {{ Card.card({ 'href': '#', 'view': 'lowercase', 'theme': 'black-unhovered', 'hoverType': 'button', 'title': 'Реализация залогового имущества', 'subtitle': 'Продажа непрофильных активов' | striptags(true) | escape | nl2br, 'link': 'Подробнее', 'class': 'section__element company__card '  }) }}
                    {{ Card.card({ 'href': '#', 'view': 'lowercase', 'theme': 'black-unhovered', 'hoverType': 'button', 'title': 'Смс - \n  информирование' | striptags(true) | escape | nl2br, 'subtitle': 'Оповещение о состоянии счетов в реальном времени' | striptags(true) | escape | nl2br, 'link': 'Подробнее', 'class': 'section__element company__card '  }) }}
                    {{ Card.card({ 'href': '#', 'view': 'lowercase', 'theme': 'black-unhovered', 'hoverType': 'button', 'title': 'Информационный центр', 'subtitle': 'Банковское обслуживание по телефону' | striptags(true) | escape | nl2br, 'link': 'Подробнее', 'class': 'section__element company__card ' }) }}
                  </div>
                  <div class="carousel-controls js-carousel-controls">
                    <div class="carousel-controls__pagination js-carousel-pagination" data-carousel="index-company">
                      <span>01</span><span></span><span></span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </section>



    </main>

    {% include "../components/modules/footer/footer.njk" %}
  </div>
{% endblock %}
