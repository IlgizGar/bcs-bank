                  <div class="index-carousel__wrap">
                    <div class="section__row">

                      <div class="index-carousel__content">
                        <div class="features index-carousel__features">
                            {{ Feature.feature({ 'title': '21 марта 2018', 'text': '', 'mods': {'type': 'normal','view' : 'thin'}, 'class': 'index-carousel__feature'}) }}
                        </div>
