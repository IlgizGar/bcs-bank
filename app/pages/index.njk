                <div class="carousel-controls__pagination js-carousel-pagination" data-carousel="index-services">
                  <span>01</span><span></span><span></span>
                </div>
              </div>
            </div>
            {% include "../components/modules/services/transfer.njk" %}
          </div>
        </div>
      </section>
      <iframe class="transfer-iframe js-scroll-animate" src="https://pay.best2pay.net/webapi/P2PTransfer?sector=1480&code=643"></iframe>
