            <div class="services__carousel carousel carousel_type-mobile js-scroll-animate">
              <div class="js-carousel carousel__content" data-id="index-services" data-breakpoint="992">
                {{ Card.card({ 'block': 'modules/services/fix-course', 'view': 'lowercase', 'theme': 'black', 'hoverType': 'circle-button', 'link': 'Зафиксировать курс', 'class': 'section__element services__card', 'action': 'https://valuta.bcs-bank.com/', 'attr': {'form': 'fix-course', 'api-url': 'https://beta.bcs-bank.com/get_xchng_update '} }) }}
