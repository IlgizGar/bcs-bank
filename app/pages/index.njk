                    <div class="index-carousel__content">
                      {{ Heading.heading({ 'tag': 'h1', 'title': 'Отпуск легче \n с кредитом БКС' | striptags(true) | escape | nl2br, 'type': 'large', 'margin': 'normal', 'theme': 'light'}) }}
