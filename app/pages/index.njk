            {{ Heading.heading({ 'title': 'Полезные сервисы', 'mods': { 'type': 'default', 'margin': 'none', 'theme': 'default' } }) }}
            {{ Button.button({ 'href': '#', 'title': 'Все сервисы', 'mods': { 'type': 'link', 'theme': 'default', 'view': 'text' } }) }}
