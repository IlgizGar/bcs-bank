{% extends "layout/layout.njk" %}
{#{% extends "library/card/card.njk" %}#}

{% set root = "." %}
{% set title = "Главная" %}

{% import "../components/modules/menubar/menubar.njk" as Menubar %}
{% import "../components/library/heading/heading.njk" as Heading %}
{% import "../components/library/feature/feature.njk" as Feature %}
{% import "../components/library/button/button.njk" as Button %}
{% import "../components/library/card/card.njk" as Card with context %}
{% import "../components/modules/advice/advice.njk" as Advice %}
{% import "../components/library/input/input.njk" as Input %}
{% import "../components/icon/icon.njk" as Icon %}

{% block body %}
  <div class="page js-page">

    {% include "../components/modules/header/header.njk" %}

    <main role="main">
      <section class="section page__section">
        <div class="section__header section__header_theme-blue">

          <div class="carousel">
            <div class="carousel__progressbar">
              <div class="carousel__progressbar-bar js-carousel-progressbar"></div>
            </div>
            <div class="index-carousel js-carousel">
              <div class="index-carousel__slide">
                <div class="page__container">
                  <div class="index-carousel__wrap">
                    <div class="index-carousel__content">
                      {{ Heading.heading({ 'tag': 'h1', 'title': 'Отпуск легче \n с кредитом БКС' | striptags(true) | escape | nl2br, 'mods': { 'type': 'large', 'margin': 'medium', 'theme': 'light' } }) }}
                      <div class="index-carousel__features">
                        {{ Feature.feature({ 'title': 'До 55 дней', 'text': 'беспроцентный \n период' | striptags(true) | escape | nl2br, 'mods': {'type': 'normal'}, 'class': 'index-carousel__feature'}) }}
                        <div class="feature feature_type-normal index-carousel__feature">
                          <div class="feature__content">
                            <span class="feature__title">
                              До 1 млн. {{ Icon.icon({ 'name': 'ruble' }) }}
                            </span>
                            <span class="feature__text">
                              максимальная <br> сумма кредита
                            </span>
                          </div>
                        </div>
                        {{ Feature.feature({ 'title': 'До 30%', 'text': 'от покупок \n возвращаются на карту' | striptags(true) | escape | nl2br, 'mods': {'type': 'normal'}, 'class': 'index-carousel__feature'}) }}
                      </div>
                    </div>
                    <div class="index-carousel__image">
                      <img src="assets/images/banner-family.png" alt="Отпуск легче с кредитом БКС">
                    </div>
                  </div>
                </div>
              </div>
              <div class="index-carousel__slide">
                <div class="page__container">
                  <div class="index-carousel__wrap">
                    <div class="index-carousel__content">
                      {{ Heading.heading({ 'tag': 'h1', 'title': 'Отпуск легче \n с кредитом БКС' | striptags(true) | escape | nl2br, 'mods': { 'type': 'large', 'margin': 'medium', 'theme': 'light' } }) }}
                      <div class="index-carousel__features">
                        {{ Feature.feature({ 'title': 'До 55 дней', 'text': 'беспроцентный \n период' | striptags(true) | escape | nl2br, 'mods': {'type': 'normal'}, 'class': 'index-carousel__feature'}) }}
                        <div class="feature feature_type-normal index-carousel__feature">
                          <div class="feature__content">
                            <span class="feature__title">
                              До 1 млн. {{ Icon.icon({ 'name': 'ruble' }) }}
                            </span>
                            <span class="feature__text">
                              максимальная <br> сумма кредита
                            </span>
                          </div>
                        </div>
                        {{ Feature.feature({ 'title': 'До 30%', 'text': 'от покупок \n возвращаются на карту' | striptags(true) | escape | nl2br, 'mods': {'type': 'normal'}, 'class': 'index-carousel__feature'}) }}
                      </div>
                    </div>
                    <div class="index-carousel__image">
                      <img src="assets/images/banner-family.png" alt="Отпуск легче с кредитом БКС">
                    </div>
                  </div>
                </div>
              </div>
              <div class="index-carousel__slide">
                <div class="page__container">
                  <div class="index-carousel__wrap">
                    <div class="index-carousel__content">
                      {{ Heading.heading({ 'tag': 'h1', 'title': 'Отпуск легче \n с кредитом БКС' | striptags(true) | escape | nl2br, 'mods' : { 'type': 'large', 'margin': 'medium', 'theme': 'light' } }) }}
                      <div class="index-carousel__features">
                        {{ Feature.feature({ 'title': 'До 55 дней', 'text': 'беспроцентный \n период' | striptags(true) | escape | nl2br, 'mods': {'type': 'normal'}, 'class': 'index-carousel__feature'}) }}
                        <div class="feature feature_type-normal index-carousel__feature">
                          <div class="feature__content">
                            <span class="feature__title">
                              До 1 млн. {{ Icon.icon({ 'name': 'ruble' }) }}
                            </span>
                            <span class="feature__text">
                              максимальная <br> сумма кредита
                            </span>
                          </div>
                        </div>
                        {{ Feature.feature({ 'title': 'До 30%', 'text': 'от покупок \n возвращаются на карту' | striptags(true) | escape | nl2br, 'mods': {'type': 'normal'}, 'class': 'index-carousel__feature'}) }}
                      </div>
                    </div>
                    <div class="index-carousel__image">
                      <img src="assets/images/banner-family.png" alt="Отпуск легче с кредитом БКС">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="page__container">
            <div class="section__header-controls">

              {{ Button.button({ 'title': 'Оформите карту', 'mods': { 'theme': 'white' }, 'class': 'section__header-button' }) }}
              {{ Button.button({ 'href': '#', 'title': 'Узнать больше', 'mods': { 'theme': 'white', 'view': 'text' } }) }}

              <div class="carousel-controls js-carousel-controls">
                <div class="carousel-controls__pagination js-carousel-pagination">
                  <span>01</span><span></span><span></span>
                </div>
              </div>

            </div>
          </div>
        </div>
      </section>
      <section class="products section">
        <div class="page__container">
          <div class="section__row">
            {{ Card.card({ 'href': '#', 'type': 'figure', 'img': 'assets/images/baby-boy.png', 'view': 'uppercase', 'theme': 'black', 'hoverType': 'button', 'title': '12,9%', 'subtitle': 'ставка по кредиту \n без переплат' | striptags(true) | escape | nl2br, 'link': 'Потребительский кредит', 'class': 'section__element products__card' }) }}
            {{ Card.card({ 'href': '#', 'type': 'figure', 'img': 'assets/images/woman.png', 'view': 'uppercase', 'theme': 'black', 'hoverType': 'button', 'title': '30%', 'subtitle': 'кешбек за покупки \n у партнеров' | striptags(true) | escape | nl2br, 'link': 'Кредитная карта', 'class': 'section__element products__card' }) }}
            {{ Card.card({ 'href': '#', 'type': 'figure', 'img': 'assets/images/man.png', 'view': 'uppercase', 'theme': 'black', 'hoverType': 'button', 'title': '8,1%', 'subtitle': 'годовых по вкладу \n в рублях' | striptags(true) | escape | nl2br, 'link': 'Вклад', 'class': 'section__element products__card' }) }}
          </div>
        </div>
      </section>
      <section class="mobile section section_theme-blue page__section page__section_theme-large">
        <div class="page__container">
          <div class="section__wrap">
            <div class="mobile__content">
              {{ Heading.heading({ 'title': 'Легкий мобильный банк' | striptags(true) | escape | nl2br, 'mods': { 'type': 'default', 'margin': 'small', 'theme': 'light' } }) }}
              <div class="section__text section__text_theme-normal section__text_theme-light">
                <p>Управление банковскими и инвестиционными продуктами</p>
                <p>Оплата услуг без комиссии</p>
                <p>Переводы по всему миру</p>
                <p>Обмен валюты по курсу близкому к биржевому</p>
                <p>Чат с оператором</p>
              </div>
              <div class="mobile__vendors">
                {{ Button.button({ 'href': 'https://play.google.com/store/apps/details?id=cz.bsc.bcs', 'name': 'android', 'mods': { 'type': 'icon', 'theme': 'white', 'size': 'large' } }) }}
                {{ Button.button({ 'href': 'https://itunes.apple.com/ru/app/bks-onlajn/id652802642', 'name': 'apple', 'mods': { 'type': 'icon', 'theme': 'white', 'size': 'large' } }) }}
              </div>
            </div>
            <img class="mobile__figure" src="assets/images/mobi-man.png" alt="Легкий мобильный банк">
          </div>
        </div>
      </section>
      <section class="services section page__section page__section_theme-large">
        <div class="page__container">
          <div class="section__heading">
            {{ Heading.heading({ 'title': 'Полезные сервисы' | striptags(true) | escape | nl2br, 'mods': { 'type': 'default', 'margin': 'none', 'theme': 'default' } }) }}
            {{ Button.button({ 'href': '#', 'title': 'Все сервисы', 'mods': { 'type': 'link', 'theme': 'default', 'view': 'text' } }) }}
          </div>
          <div class="section__row">
            {{ Card.card({ 'block': 'modules/services/fix-course', 'view': 'lowercase', 'theme': 'black', 'hoverType': 'button', 'link': 'Зафиксировать курс', 'class': 'section__element services__card' }) }}
            {{ Card.card({ 'block': 'modules/services/exchange', 'view': 'lowercase', 'theme': 'black', 'hoverType': 'button', 'link': 'Обменять валюту', 'class': 'section__element services__card' }) }}
            {{ Card.card({ 'block': 'modules/services/check-exist', 'view': 'lowercase', 'theme': 'black', 'hoverType': 'button', 'link': 'Проверить наличие', 'class': 'section__element services__card' }) }}

            <div class="services__transfer">
              <div class="services__transfer-bkg"></div>
              <div class="services__transfer-heading">
                {{ Heading.heading({ 'title': 'Мгновенный перевод \n с карты на карту' | striptags(true) | escape | nl2br, 'mods': { 'type': 'default', 'margin': 'none', 'theme': 'light' } }) }}
                {{ Button.button({ 'href': '#', 'title': 'Лимиты и тарифы', 'mods': { 'type': 'link', 'theme': 'white', 'view': 'text' }, 'class': 'services__transfer-link' }) }}
              </div>
              <div class="js-form">
                <form>
                  <div class="services__transfer-cards section__row">
                    <div class="services__credit-card">
                      {{ Heading.heading({ 'title': 'Данные отправителя', 'mods': { 'type': 'small', 'margin': 'none', 'theme': 'default' } }) }}
                      {{ Input.input({ 'label': 'Номер карты', 'name': 'card_sender', 'class': 'services__card-sender', 'field': 'js-card-masked', 'state': 'required' }) }}
                      {{ Input.input({ 'label': 'CVV/CVV2', 'name': 'card_cvv', 'class': 'services__card-code mt-16', 'field': 'js-cvv-masked', 'state': 'required maxlength=3' }) }}
                      {{ Input.input({ 'label': 'Срок действия', 'name': 'card_period', 'class': 'services__card-period mt-16', 'field': 'js-period-masked', 'state': 'required maxlength=5' }) }}
                    </div>
                    <div class="services__credit-card">
                      {{ Heading.heading({ 'title': 'Данные получателя', 'mods': { 'type': 'small', 'margin': 'none', 'theme': 'default' } }) }}
                      {{ Input.input({ 'label': 'Номер карты', 'name': 'card_reciever', 'class': 'services__card-sender', 'field': 'js-card-masked', 'state': 'required' }) }}
                    </div>
                    <div class="services__transfer-controls">
                      {{ Input.input({ 'label': 'Сумма перевода', 'name': 'transfer_amount', 'icon': 'ruble', 'class': 'services__card-summ', 'field': 'js-numeric-input js-transfer-input', 'state': 'maxlength=6 required', 'attr': {'max': '75000', 'commission': '0.02'} }) }}
                      <input class="js-commission-amount" value="0" hidden>
                      <div class="services__card-commission">
                        <p class="js-commission-info">Комиссия за перевод будет <br> расчитана автоматически</p>
                        <div class="services__card-commission-res js-commission-res state_hidden">
                          <p>Сумма перевода с комиссией</p>
                          <p><span class="js-commission-user-amount">0</span> {{ Icon.icon({ 'name': 'rub' }) }}</p>
                        </div>
                      </div>
                      <div class="services__card-legal">
                        <span>Нажимая «Перевести деньги», <br>я принимаю </span>{{ Button.button({ 'href': '#', 'title': 'условия сервиса', 'mods': { 'type': 'link', 'theme': 'default', 'view': 'text' } }) }}
                      </div>
                      {{ Button.button({ 'title': 'Перевести деньги', 'type': 'submit', 'mods': { 'theme': 'default' } }) }}
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="advice section page__section page__section_theme-large">
        <div class="page__container">
          <div class="section__heading">
            {{ Heading.heading({ 'title': 'Только нужные советы' | striptags(true) | escape | nl2br, 'mods': { 'type': 'default', 'margin': 'none', 'theme': 'default' } }) }}
            {{ Button.button({ 'href': '#', 'title': 'Все советы', 'mods': { 'type': 'link', 'theme': 'default', 'view': 'text' } }) }}
          </div>
          <div class="section__row">
            {{ Advice.advice({ 'href': '#', 'title': 'Как поужинать \n в любимом ресторане \n за счет банка' | striptags(true) | escape | nl2br, 'subtitle': '24 марта 2018', 'img': 'assets/images/advice-1.jpg', 'class': 'section__element' }) }}
            {{ Advice.advice({ 'href': '#', 'title': 'Где срочно взять \n деньги' | striptags(true) | escape | nl2br, 'subtitle': '24 марта 2018', 'img': 'assets/images/advice-2.jpg', 'class': 'section__element' }) }}
            {{ Advice.advice({ 'href': '#', 'title': 'Как экономить \n на путешествиях до 25%' | striptags(true) | escape | nl2br, 'subtitle': '24 марта 2018', 'img': 'assets/images/advice-3.jpg', 'class': 'section__element' }) }}
          </div>
        </div>
      </section>
      <section class="company section section_theme-blue page__section">
        <div class="page__container">
          <img class="company__figure" src="assets/images/flying.png" alt="Безграничные возможности">
          {{ Heading.heading({ 'title': 'Откройте безграничные \n возможности сгруппой \n компаний БКС' | striptags(true) | escape | nl2br, 'mods': { 'type': 'default', 'margin': 'normal', 'theme': 'light' } }) }}
          <div class="section__row">
            {{ Card.card({ 'href': '#', 'icon': 'assets/images/svg/premier.svg', 'view': 'lowercase', 'theme': 'black-unhovered', 'hoverType': 'button', 'title': 'Ваш персональный финансовый советник в БКС онлайн', 'subtitle': 'Инвестиции доступные \n каждому' | striptags(true) | escape | nl2br, 'link': 'БКС Премьер', 'class': 'section__element company__card' }) }}
            {{ Card.card({ 'href': '#', 'icon': 'assets/images/svg/logo-dark.svg', 'view': 'lowercase', 'theme': 'black-unhovered', 'hoverType': 'button', 'title': 'Инвестируйте \n с крупнейшим \n брокером России' | striptags(true) | escape | nl2br, 'subtitle': 'Достижение ваших \n финансовых целей' | striptags(true) | escape | nl2br, 'link': 'БКС Брокер', 'class': 'section__element company__card' }) }}
            {{ Card.card({ 'href': '#', 'icon': 'assets/images/svg/ultima.svg', 'view': 'lowercase', 'theme': 'black-unhovered', 'hoverType': 'button', 'title': 'Персональный банк самых амбициозных', 'subtitle': 'Уникальные привилегии \n и безграничные возможности' | striptags(true) | escape | nl2br, 'link': 'БКС Ультима', 'class': 'section__element company__card' }) }}
          </div>
        </div>
      </section>
    </main>

    {% include "../components/modules/footer/footer.njk" %}
  </div>
{% endblock %}
