                <div class="page__container">
                  <div class="index-carousel__wrap">
                    <div class="section__row">
                      <div class="index-carousel__content">
                        {{ Heading.heading({ 'tag': 'h1', 'title': 'Покупки \n с картой БКС', 'mods': { 'type': 'large', 'margin': 'medium', 'theme': 'light' } }) }}
                        <div class="features index-carousel__features">
                          {{ Feature.feature({ 'title': 'До 55 дней', 'text': 'беспроцентный \n период', 'mods': {'type': 'normal'}, 'class': 'index-carousel__feature'}) }}
                          {{ Feature.feature({ 'title': 'До 1 млн. #ruble', 'text': 'максимальная \n сумма кредита', 'mods': {'type': 'normal'}, 'class': 'index-carousel__feature'}) }}
