              </div>
              <div class="mobile__vendors">
                <a class="mobile__link-app" href="https://play.google.com/store/apps/details?id=cz.bsc.bcs" target="_blank">
                  {{ Button.button({ 'name': 'android', 'mods': { 'type': 'icon', 'theme': 'white', 'size': 'large', 'view': 'outlined' } }) }}
                  <p>Google Play</p>
                </a>
                <a class="mobile__link-app" href="https://itunes.apple.com/ru/app/bks-onlajn/id652802642" target="_blank">
                  {{ Button.button({ 'name': 'apple', 'mods': { 'type': 'icon', 'theme': 'white', 'size': 'large', 'view': 'outlined' } }) }}
                  <p>AppStore</p>
                </a>
              </div>
            </div>
            <div class="mobile__figure">
              <div class="illustration" data-illustration="data_il1"></div>
            </div>
          </div>
        </div>
