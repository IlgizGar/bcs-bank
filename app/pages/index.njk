      <section class="index-products section page__section js-scroll-animate">
        <div class="page__container">
          <div class="section__row">
            <div class="index-products__list">
              {{ Card.card({ 'href': '#', 'type': 'figure', 'img': 'assets/illustrations/index_credit.svg', 'view': 'uppercase', 'theme': 'black', 'hoverType': 'circle',  'title': '12,9%', 'subtitle': 'ставка по кредиту \n без переплат' | striptags(true) | escape | nl2br, 'link': 'Потребительский кредит', 'mobile': 'Кредит', 'class': 'section__element index-products__card' }) }}
