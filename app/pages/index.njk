                {{ Card.card({ 'block': 'modules/services/exchange-map', 'view': 'lowercase', 'theme': 'black', 'hoverType': 'circle-button', 'link': 'Найти на карте', 'linkhref': 'offices.html', 'class': 'section__element services__card', 'attr': {'api-url': 'https://beta.bcs-bank.com/get_courses_update'} }) }}
