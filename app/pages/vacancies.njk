{% extends "layout/layout.njk" %}

{% import "../components/library/heading/heading.njk" as Heading %}
{% import "../components/library/contact/contact.njk" as Contact %}
{% import "../components/library/card/card.njk" as Card %}

{% set root = "." %}
{% set title = "Вакансии" %}
{% set vacancies = [
  { 'title': 'Начальник отдела \n методологии риск-менеджмента',
    'subtitle': 'Москва',
    'items': ['Высшее образование (экономическое);', 'Опыт работы от 3-х лет на аналогичной должности в коммерческих банках;', 'Обширная практика написания внутренних документов, обязтаельно в части корпоративного кредитования и резервирования по 254-П, 283-П, регламентов по взаимодействию подразделений.'] },
  { 'title': 'Специалист отдела \n поддержки продаж',
    'subtitle': 'Москва',
    'items': ['Высшее образование (экономическое, юридическое);', 'Аналогичный опыт работы (желательно);', 'Коммуникативные навыки;', 'Умение работать с документами.']},
  { 'title': 'Старший клиентский менеджер \n по привлечению корпоративных клиентов',
    'subtitle': 'Москва',
    'items': ['Наличие собственной клиентской базы;', 'Знание всех банковских продуктов и технологий для корпоративных клиентов;', 'Опыт проведения презентаций, переговоров;', 'Опыт продаж финансовых продуктов от двух лет.']}
] %}

{% block body %}
  <div class="page">

    {% include "../components/modules/header/header.njk" %}

    <main role="main">
      <section class="vacancies section page__section">
        <div class="page__container">
          <div class="section__content">
            <div class="section__cards section__cards_theme-final">
              {{ Heading.heading({ 'title': 'Вакансии', 'context': 'в Москве', 'class': 'heading_type-cards'}) }}
              {% for vacancy in vacancies %}
                {{ Card.card({ 'type': 'vacancy', 'title': vacancy.title | striptags(true) | escape | nl2br, 'subtitle': vacancy.subtitle, 'class': 'card_type-vacancy', 'items': vacancy.items }) }}
              {% endfor %}
            </div>
            <div class="section__aside">
              {{ Contact.contact({ 'title': 'Контакты HR департамента',
                'items': [{ 'name': 'Бесплатный звонок по России', 'value': '8 (800) 500-03-05' }, { 'name': 'Почтовый и юридический адрес', 'value': 'г. Москва, просп. Мира \n д.69, стр. 1' | striptags(true) | escape | nl2br }],
                'class': 'vacancies__contact' }) }}
            </div>
          </div>
        </div>
      </section>
    </main>

    {% include "../components/modules/footer/footer.njk" %}
  </div>
{% endblock %}
