{% extends "layout/layout.njk" %}
{#{% extends "library/card/card.njk" %}#}

{% set root = "." %}
{% set title = "Полезное" %}
{% set header = 'blue' %}

{% import "../components/modules/menubar/menubar.njk" as Menubar %}
{% import "../components/library/heading/heading.njk" as Heading %}
{% import "../components/library/feature/feature.njk" as Feature %}
{% import "../components/library/button/button.njk" as Button %}
{% import "../components/library/card/card.njk" as Card with context %}
{% import "../components/modules/advice/advice.njk" as Advice %}
{% import "../components/library/input/input.njk" as Input %}
{% import "../components/icon/icon.njk" as Icon %}
{% import "../components/modules/tabbar/tabbar.njk" as Tabbar %}
{% import "../components/modules/brand-features/brand-features.njk" as BrandFeatures %}
{% import "../components/library/usefull-advantage/usefull-advantage.njk" as UsefullAdvantage %}

{% block body %}
    <div class="page js-page">

        {% include "../components/modules/header/header.njk" %}

        <main role="main">
            <section class="section page__section">
                <div class="section__header section__header_theme-blue">

                    <div class="carousel">
                        <div class="index-carousel js-carousel" data-id="index-header">
                            <div class="index-carousel__slide" data-href="http://google.com"
                                 data-read-more-href="http://ya.ru" data-scroll-id="">
                                <!-- data-read-more-href url для первой кнопки    data-href  для второй кнопки -->
                                <div class="page__container">
                                    <div class="index-carousel__wrap">
                                        <div class="section__row">
                                            <div class="index-carousel__content">
                                                {{ Heading.heading({ 'tag': 'h1', 'title': 'Оплачивайте покупки смартфоном и  носимым устройством', 'mods': { 'type': 'large', 'margin': 'medium', 'theme': 'light' } }) }}
                                                <div class="index-carousel__content-text">
                                                    Совершайте покупки c сервисом Samsung Pay и картами Visa БКС Банка
                                                </div>
                                            </div>
                                            <div class="index-carousel__image">
                                                <div class="illustration">
                                                    <img class="illustration-image illustration-image-short"
                                                         src="assets/illustrations/samsung-pay_img.png">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section class="index-products section page__section mb-52">
                <div class="page__container mb-32">
                    {{ Heading.heading({ 'title': 'Преимущества сервиса', 'mods': { 'type': 'default' } }) }}
                </div>
                <div class="page__container">
                    <div class="section__row ">

                            {{ UsefullAdvantage.UsefullAdvantage({'class':'section__col section__col_half','mods':{'theme':'default'},'path':'assets/images/svg/map.svg', 'title':'Повсеместно', 'text':[
                                {'text':'Samsung Pay принимается к оплате везде, где можно оплатить покупку по обычной банковской карте по бесконтактной технологии или магнитной полосе.'},
                                {'text':'Благодаря собственной технологии MST (от англ. Magnetic Secure Transmission) Samsung Pay позволяет оплачивать покупки на любых терминалах — не только тех, которые поддерживают бесконтактную оплату.'}
                            ]}) }}

                            {{ UsefullAdvantage.UsefullAdvantage({'class':'section__col section__col_half','mods':{'theme':'default'},'path':'assets/images/svg/shield-image.svg', 'title':'Безопасно', 'text':[
                                {'text':'Вместо номера карты используется специальный цифровой код, созданный случайным образом — токен'},
                                {'text':'Для каждой покупки требуется авторизация пользователя приложения по отпечатку пальца, радужке глаз (в зависимости  от модели смартфона) или PIN-коду приложения — только вы можете совершать покупки.'},
                                {'text':'Встроенная система безопасности Samsung Knox обеспечивает защиту данных Samsung Pay независимо от операционной системы на устройстве'}
                            ]}) }}


                            {{ UsefullAdvantage.UsefullAdvantage({'class':'section__col section__col_full','mods':{'theme':'large'},'path':'assets/images/svg/card-image.svg', 'title':'Просто', 'text':[
                                {'text':'Проведите по экрану снизу вверх, чтобы запустить Samsung Pay'},
                                {'text':'Выберите карту и авторизуйтесь для оплаты'},
                                {'text':'После этого просто поднесите устройство к терминалу'}
                            ]}) }}

                    </div>
                </div>
            </section>








            <section class="section page__section section_theme-gray">
                <div class="page__container">
                    {{ Heading.heading({ 'title': 'Безопасность', 'mods': { 'type': 'default' } }) }}
                    <div class="section__row mt-64 mb-70">
                        <div class="section__col section__col_3">
                            <img width="47" class="mb-16" src="assets/illustrations/samsung_mob_icon1.png">
                            {{ Heading.heading({ 'title': 'Токенизация', 'mods': { 'type': 'normal' } }) }}
                            <div class="text mt-32">
                                Во время покупки вместо номера карты используется специальный цифровой код, созданный случайным образом — токен. Ваша личная информация не используется во время оплаты и остается в безопасности.
                            </div>
                        </div>
                        <div class="section__col section__col_3">
                            <img width="38" class="mb-16" src="assets/illustrations/samsung_mob_icon2.png">
                            {{ Heading.heading({ 'title': 'Авторизация', 'mods': { 'type': 'normal' } }) }}
                            <div class="text mt-32">
                                Каждая транзакция обязательно подтверждается по вашему отпечатку пальца, радужке глаз или PIN-коду приложения — только вы можете совершать покупки.
                            </div>
                        </div>
                        <div class="section__col section__col_3">
                            <img width="80" class="mb-16" src="assets/illustrations/samsung_mob_icon3.png">
                            {{ Heading.heading({ 'title': 'Samsung Knox', 'mods': { 'type': 'normal' } }) }}
                            <div class="text mt-32">
                                Специальная встроенная система безопасности Samsung Knox обеспечивает защиту устройства и данных Samsung Pay от вредоносных атак,  а также непрерывно отслеживает возможные уязвимости независимо от операционной системы на устройстве.
                            </div>
                        </div>
                    </div>
                </div>
            </section>


            <div class="js-section-tabs">
                <section class="index-products section page__section mb-52">
                    <div class="page__container mb-10">
                        {{ Heading.heading({ 'title': 'Как платить устройством', 'mods': { 'type': 'default' } }) }}
                    </div>
                    <div class="page__container">
                        <div class="section-tabs__nav">
                            <ul class="section-tabs__nav-list">
                                <li data-tab-show="#phone" class="section-tabs__nav-item">
                                    Смартфоном
                                </li>
                                <li data-tab-show="#watch" class="section-tabs__nav-item">
                                    Gear S3
                                </li>
                            </ul>
                        </div>
                    </div>
                </section>
                <section id="phone" class="section page__section mb-112 js-section-tab">

                </section>
                <section id="watch" class="section page__section mb-64 js-section-tab">

                </section>
            </div>


            <section class="section page__section page__section_theme-last">
                <div class="page__container">
                    <div class="section__row">
                        <div class="section__content">
                            {{ Heading.heading({ 'title': 'Частые вопросы' | striptags(true) | escape | nl2br, 'mods': { 'type': 'normal', 'margin': 'short' } }) }}
                        </div>
                    </div>
                    <div class="collapse collapse_size-full collapse_theme-grey">
                        <div class="collapse__item">
                            <div class="collapse__control">
                                <div class="collapse__control-title">На каких устройствах работает Google Pay?</div>
                                <div class="collapse__control-icon">
                                    {{ Icon.icon({ 'name': 'dropdown' }) }}
                                </div>
                            </div>
                            <div class="collapse__content">
                                <p class="text">
                                    ответ
                                </p>
                            </div>
                        </div>
                        <div class="collapse__item">
                            <div class="collapse__control">
                                <div class="collapse__control-title">Где можно оплачивать покупки с помощью Google Pay?
                                </div>
                                <div class="collapse__control-icon">
                                    {{ Icon.icon({ 'name': 'dropdown' }) }}
                                </div>
                            </div>
                            <div class="collapse__content">
                                <p class="text">
                                    ответ
                                </p>
                            </div>
                        </div>
                        <div class="collapse__item">
                            <div class="collapse__control">
                                <div class="collapse__control-title">Какие карты можно использовать с Google Pay?
                                </div>
                                <div class="collapse__control-icon">
                                    {{ Icon.icon({ 'name': 'dropdown' }) }}
                                </div>
                            </div>
                            <div class="collapse__content"><p class="text">
                                    ответ
                                </p></div>

                        </div>
                        <div class="collapse__item">
                            <div class="collapse__control">
                                <div class="collapse__control-title">Будут ли начисляться бонусы по программе лояльности
                                    БКС Бонус?
                                </div>
                                <div class="collapse__control-icon">
                                    {{ Icon.icon({ 'name': 'dropdown' }) }}
                                </div>
                            </div>
                            <div class="collapse__content">
                                <p class="text">
                                    ответ
                                </p>
                            </div>
                        </div>
                        <div class="collapse__item">
                            <div class="collapse__control">
                                <div class="collapse__control-title">Что делать, если я потерял свой смартфон?</div>
                                <div class="collapse__control-icon">
                                    {{ Icon.icon({ 'name': 'dropdown' }) }}
                                </div>
                            </div>
                            <div class="collapse__content">
                                <p class="text">
                                    ответ
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

            </section>


        </main>

        {% include "../components/modules/footer/footer.njk" %}
    </div>
{% endblock %}
