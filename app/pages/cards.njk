{% extends "layout/layout.njk" %}

{% import "../components/library/heading/heading.njk" as Heading %}
{% import "../components/library/button/button.njk" as Button %}
{% import "../components/modules/tabbar/tabbar.njk" as Tabbar %}
{% import "../components/modules/plastic-card/plastic-card.njk" as PlasticCard %}

{% set root = "." %}
{% set title = "Карты" %}

{% block body %}
  <div class="page js-page">

    {% include "../components/modules/header/header.njk" %}

    <main role="main" class="plastic-cards js-plastic-cards">

      <section class="section page__section page__section_theme-first">
        <div class="page__container">
          <div class="section__row">
            <div class="section__content section__content_theme-default">
              {{ Heading.heading({ 'tag': 'h1', 'title': 'Карты', 'mods': { 'type': 'default', 'margin': 'short', 'theme': 'default' } }) }}
            </div>
          </div>
        </div>
        <div class="plastic-cards__controls">
          <div class="page__container">
            <div class="section__row">
              {{ Tabbar.tabbar({ 'anchor': { 'view': 'underscore', 'theme': 'default-tab' }, 'tabs': [{'title': 'Дебетовые', 'id': 'debet', 'state': 'active' }, {'title': 'Кредитные', 'id': 'credit'}, {'title': 'Пакеты услуг', 'id': 'packets'}], 'class': 'plastic-cards__tabbar' }) }}
            </div>
          </div>
        </div>
      </section>

      <section class="section page__section page__section_theme-last">
        <div class="tabs js-tabs">
          <div id="debet" class="tabs__item js-tab state_invisible">
            <div class="page__container">
              <div class="section__row">
                {{ PlasticCard.plasticCard({ 'title': 'Цифровой Visa Infinite',
                  'category': {'travel': 'Путешествия'},
                  'image': 'assets/images/card-infinite.png',
                  'theme': 'blue',
                  'features': [
                    { 'title': '3%',
                      'text': 'от всех покупок возвращаем на карту',
                      'mods': {'type': 'normal', 'theme': 'light'},
                      'class': 'plastic-card__feature'},
                    { 'title': '0#ruble',
                      'text': 'страхование путешествующих',
                      'mods': {'type': 'normal', 'theme': 'light'},
                      'class': 'plastic-card__feature'},
                    { 'title': 'От 0#ruble',
                      'text': 'стоимость обслуживания',
                      'mods': {'type': 'normal', 'theme': 'light'},
                      'class': 'plastic-card__feature'}
                  ] }) }}
                {{ PlasticCard.plasticCard({ 'title': 'Цифровой Visa Infinite',
                  'category': {'shopping': 'Все покупки'},
                  'image': 'assets/images/card-infinite.png',
                  'features': [
                    { 'title': '12%',
                      'text': 'от покупок в любимых категориях',
                      'mods': {'type': 'normal'},
                      'class': 'plastic-card__feature'},
                    { 'title': '0#ruble',
                      'text': 'доступ в бизнес залы Priority Pass',
                      'mods': {'type': 'normal'},
                      'class': 'plastic-card__feature'},
                    { 'title': 'От 0#ruble',
                      'text': 'стоимость обслуживания',
                      'mods': {'type': 'normal'},
                      'class': 'plastic-card__feature'}
                  ] }) }}
                {{ PlasticCard.plasticCard({
                  'title': 'Цифровой Visa Platinum',
                  'category': {'travel': 'Путешествия'},
                  'image': 'assets/images/card-infinite.png',
                  'features': [
                    { 'title': '7%',
                      'text': 'от покупок в любимых категориях',
                      'mods': {'type': 'normal'},
                      'class': 'plastic-card__feature'},
                    { 'title': '0#ruble',
                      'text': 'комиссия за онлайн платежи и переводы',
                      'mods': {'type': 'normal'},
                      'class': 'plastic-card__feature'},
                    { 'title': 'От 0#ruble',
                      'text': 'стоимость обслуживания',
                      'mods': {'type': 'normal'},
                      'class': 'plastic-card__feature'}
                  ] }) }}
                {{ PlasticCard.plasticCard({
                  'title': 'MORE Visa Infinite',
                  'category': {'travel': 'Путешествия'},
                  'image': 'assets/images/card-more-infinite.png',
                  'features': [
                    { 'title': '5%',
                      'text': 'от всех покупок возвращаем на карту',
                      'mods': {'type': 'normal'},
                      'class': 'plastic-card__feature'},
                    { 'title': '0#ruble',
                      'text': 'комиссия за онлайн платежи и переводы',
                      'mods': {'type': 'normal'},
                      'class': 'plastic-card__feature'},
                    { 'title': 'От 0#ruble',
                      'text': 'стоимость обслуживания',
                      'mods': {'type': 'normal'},
                      'class': 'plastic-card__feature'}
                  ] }) }}
              </div>
            </div>
          </div>
          <div id="credit" class="tabs__item js-tab state_invisible">
            <div class="page__container">
              <div class="section__row">
                credit
              </div>
            </div>
          </div>
          <div id="packets" class="tabs__item js-tab state_invisible">
            <div class="page__container">
              <div class="section__row">
                packets
              </div>
            </div>
          </div>
        </div>
      </section>

    </main>

    {% include "../components/modules/footer/footer.njk" %}

  </div>
{% endblock %}
