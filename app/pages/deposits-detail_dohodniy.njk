                                data-calc="c3VtbStzdW1tMg=="
                                data-params="summ|accum_deposit_amount,summ2|summ2"
                                data-ordered="7"
                                data-round="2"
                        >10 340</span> {{ Icon.icon({ 'name': 'ruble'}) }}</div>
                      <!--/#4-->
                      <div class="calculation__conclusion text calc-result-all">
