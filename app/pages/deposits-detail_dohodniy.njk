          <section class="section section_theme-white-smoke section_padding-default page__section js-scroll-animate">
            <div class="calculator js-calc-result">
              <div class="page__container">
                {{ Heading.heading({ 'title': 'Рассчитайте свой доход', 'mods': { 'type': 'default', 'margin': 'default' } }) }}
